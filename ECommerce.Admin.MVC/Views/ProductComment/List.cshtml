@model IEnumerable<ECommerce.Application.ViewModels.CommentViewModel>

@{
    ViewData["Title"] = "Comment List";
    Layout = "_SbAdminLayout";
}

<h1 class="h3 mb-4 text-gray-800">Comments</h1>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">All Comments</h6>
    </div>

    <div class="card-body">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">@TempData["SuccessMessage"]</div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
        }

        <div class="table-responsive">
            <table class="table table-bordered table-hover" width="100%" cellspacing="0">
                <thead class="thead-light">
                    <tr>
                        <th>ID</th>
                        <th>User</th>
                        <th>Product</th>
                        <th>Comment</th>
                        <th>Rating</th>
                        <th>Approved</th>
                        <th style="width:150px;">Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.UserName</td>
                            <td>@item.ProductName</td>
                            <td>@item.Text</td>
                            <td>@item.Rating</td>
                            <td>
                                @if (item.IsApproved)
                                {
                                    <span class="badge badge-success">Approved</span>
                                }
                                else
                                {
                                    <span class="badge badge-warning">Pending</span>
                                }
                            </td>
                            <td>
                                @if (!item.IsApproved)
                                {
                                    <a asp-action="Approve"
                                       asp-route-id="@item.Id"
                                       class="btn btn-success btn-sm">
                                        <i class="fas fa-check"></i> Approve
                                    </a>
                                }
                                else
                                {
                                    <span class="text-secondary">No action</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
</div>