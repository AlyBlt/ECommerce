@model ECommerce.Data.Entities.CategoryEntity

@{
    ViewData["Title"] = "Create/Edit Category";
    Layout = "_SbAdminLayout";
}

<h1 class="h3 mb-4 text-gray-800">@ViewData["Title"]</h1>

<div class="card shadow mb-4">
    <div class="card-body">
        <form asp-action="@ViewData["Title"].ToString().Contains("Create") ? " Create" : "Edit" " method="post">
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Name" class="font-weight-bold"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Color" class="font-weight-bold"></label>
                <input asp-for="Color" type="color" class="form-control" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IconCssClass" class="font-weight-bold"></label>
                <input asp-for="IconCssClass" class="form-control" />
                <span asp-validation-for="IconCssClass" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary mt-2">Save</button>
            <a class="btn btn-secondary mt-2" href="@Url.Action("List")">Cancel</a>
        </form>
    </div>
</div>