@model ECommerce.Admin.Mvc.Models.Category.CategoryCreateEditViewModel

@{
    ViewData["Title"] = "Delete Category";
   
}

<h1 class="h3 mb-4 text-gray-800">Delete Category</h1>

<!-- ModelState hataları -->
@if (!ViewData.ModelState.IsValid)
{
    foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
    {
        <div class="alert alert-danger">@error.ErrorMessage</div>
    }
}

<div class="card shadow mb-4">
    <div class="card-body">

        <p>Are you sure you want to delete this category?</p>

        <p class="font-weight-bold text-primary">@Model.Name</p>

        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" asp-for="Id" />

            <button type="submit" class="btn btn-danger">Yes, Delete</button>
            <a asp-action="List" class="btn btn-secondary">Cancel</a>
        </form>

    </div>
</div>