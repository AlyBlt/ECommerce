@model ECommerce.Admin.Mvc.Models.User.UserViewModel

@{
    ViewData["Title"] = "Approve Seller";
 }

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-warning">Approve Seller</h6>
    </div>
    <div class="card-body">
        <p>
            Are you sure you want to approve <strong>@Model.FirstName @Model.LastName</strong> as a seller?
        </p>

        <div class="d-flex">
            <!-- Approve form -->
            <form asp-action="ApproveConfirmed" asp-route-id="@Model.Id" method="post">
                <button type="submit" class="btn btn-success mr-2">
                    <i class="fas fa-check"></i> Approve
                </button>
            </form>

            <a asp-action="List" class="btn btn-secondary ml-2">Cancel</a>
        </div>
    </div>
</div>