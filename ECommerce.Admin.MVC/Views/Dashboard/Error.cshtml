@{
    ViewData["Title"] = "Error";
    Layout = "_SbAdminLayout";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-danger">An Error Occurred</h6>
    </div>
    <div class="card-body">
        <p>Something went wrong. Please try again later or contact support.</p>
        <p>@TempData["ErrorMessage"]</p>  <!-- Hata mesajı buraya yazılabilir -->
    </div>
</div>