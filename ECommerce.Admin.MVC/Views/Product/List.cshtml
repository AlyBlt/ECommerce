@model IEnumerable<ECommerce.Data.Entities.ProductEntity>

@{
    ViewData["Title"] = "Product List";
    Layout = "_SbAdminLayout";
}

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-info">Product List</h6>
        <a asp-action="Create" class="btn btn-primary btn-sm">
            <i class="fas fa-plus"></i> Create New
        </a>
    </div>
    <div class="card-body">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">@TempData["Success"]</div>
        }

        <div class="table-responsive">
            <table class="table table-bordered table-hover" width="100%" cellspacing="0">
                <thead class="thead-light">
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Category</th>
                        <th>Seller</th>
                        <th>Price</th>
                        <th>Stock</th>
                        <th>Enabled</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td>@product.Id</td>
                            <td>@product.Name</td>
                            <td>@product.Category?.Name</td>
                            <td>@product.Seller?.FirstName @product.Seller?.LastName</td>
                            <td>@product.Price.ToString("C")</td>
                            <td>@product.StockAmount</td>
                            <td>@(product.Enabled ? "Yes" : "No")</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-primary btn-sm">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger btn-sm ms-1">
                                    <i class="fas fa-trash"></i> Delete
                                </a>
                                <form asp-action="ToggleStatus" asp-route-id="@product.Id" method="post" style="display:inline;">
                                    <button type="submit" class="btn btn-warning btn-sm ms-1">
                                        <i class="fas fa-toggle-on"></i> @(product.Enabled ? "Disable" : "Enable")
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>