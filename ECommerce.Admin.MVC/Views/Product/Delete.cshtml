@model ECommerce.Data.Entities.ProductEntity

@{
    ViewData["Title"] = "Delete Product";
    Layout = "_SbAdminLayout";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-danger">Delete Product</h6>
    </div>
    <div class="card-body">
        <p>Are you sure you want to delete the product <strong>@Model.Name</strong>?</p>

        <form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash-alt"></i> Yes, Delete
            </button>
            <a asp-action="List" asp-controller="Product" class="btn btn-secondary ms-2">
                Cancel
            </a>
        </form>
    </div>
</div>