@model ECommerceWeb.MVC.Models.Order
@{
    ViewData["Title"] = "My Orders";
}

<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg" data-setbg="~/img/breadcrumb.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>My Orders</h2>
                    <div class="breadcrumb__option">
                        <a href="/">Home</a>
                        <span>Order History</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->

<section class="shoping-cart spad">
    <div class="container">
        <div class="row">

            <!-- Menü -->
            <div class="col-lg-4 col-md-5">
                <div class="contact__sidebar">
                    <h4>Account Menu</h4>
                    <ul>
                        <li><a href="/profile/details">My Profile</a></li>
                        <li><a href="/profile/edit">Edit Profile</a></li>
                        <li><a href="/profile/my-orders">My Orders</a></li>
                        <li><a href="/profile/my-products">My Products</a></li>
                    </ul>
                </div>
            </div>

            <!-- Sipariş Listesi -->
            <div class="col-lg-8 col-md-7">

                @if (ViewBag.Empty == true)
                {
                    <h4>No orders found.</h4>
                }
                else
                {
                    <div class="shoping__cart__table">
                        <table>
                            <thead>
                                <tr>
                                    <th class="shoping__product">Product</th>
                                    <th>Price</th>
                                    <th>Qty</th>
                                    <th>Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Items)
                                {
                                    <tr>
                                        <td class="shoping__cart__item">
                                            <h5>@item.Name</h5>
                                        </td>
                                        <td class="shoping__cart__price">
                                            $@item.Price
                                        </td>
                                        <td class="shoping__cart__quantity">
                                            @item.Quantity
                                        </td>
                                        <td class="shoping__cart__total">
                                            $@item.TotalPrice
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <div class="shoping__checkout mt-4">
                        <h5>Order Summary</h5>
                        <ul>
                            <li>Order ID <span>#@Model.Id</span></li>
                            <li>Payment Method <span>@Model.PaymentMethod</span></li>
                            <li>Total <span>$@Model.TotalPrice</span></li>
                        </ul>
                    </div>
                }

            </div>

        </div>
    </div>
</section>
