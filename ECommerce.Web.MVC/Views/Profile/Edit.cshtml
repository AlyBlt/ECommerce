@model ECommerceWeb.MVC.Models.OrderviewModels.UserInformation
@{
    ViewData["Title"] = "Edit Profile";
}

<section class="checkout profile-section">
    <div class="container">
        <div class="row">

            <!-- LEFT MENU -->
            <div class="col-lg-4 col-md-4">
                <div class="checkout__order profile-sidebar">
                    <h4>Account Menu</h4>
                    <ul class="list-group list-group-flush profile-menu">
                        <li class="list-group-item"><a href="/profile/details">My Profile</a></li>
                        <li class="list-group-item"><a href="/profile/edit">Edit Profile</a></li>
                        <li class="list-group-item"><a href="/profile/my-orders">My Orders</a></li>
                        <li class="list-group-item"><a href="/profile/my-products">My Products</a></li>
                    </ul>
                </div>
            </div>

            <!-- RIGHT -->
            <div class="col-lg-8 col-md-8">
                <div class="checkout__form profile-content">

                    <h4 class="mb-4">Edit Profile Information</h4>

                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success">@TempData["Success"]</div>
                    }

                    <form asp-controller="Profile" asp-action="Edit" method="post">

                        <!-- En kritik düzeltme -->
                        <input type="hidden" name="Email" value="@Model.Email" />

                        <div class="row">

                            <div class="col-md-6 mb-3">
                                <label>Full Name</label>
                                <input asp-for="FullName" class="form-control" />
                                <span asp-validation-for="FullName" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label>Email</label>
                                <div class="profile__info-box">@Model.Email</div>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label>Phone</label>
                                <input asp-for="Phone" class="form-control" />
                                <span asp-validation-for="Phone" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label>Zip Code</label>
                                <input asp-for="ZipCode" class="form-control" />
                                <span asp-validation-for="ZipCode" class="text-danger small"></span>
                            </div>

                            <div class="col-md-12 mb-3">
                                <label>Address</label>
                                <input asp-for="Address" class="form-control" />
                                <span asp-validation-for="Address" class="text-danger small"></span>
                            </div>

                            <div class="col-md-12 mb-3">
                                <label>City</label>
                                <input asp-for="City" class="form-control" />
                                <span asp-validation-for="City" class="text-danger small"></span>
                            </div>

                            <div class="col-md-12 text-end mt-4">
                                <button type="submit" class="site-btn">Save Changes</button>
                            </div>

                        </div>
                    </form>

                </div>
            </div>

        </div>
    </div>
</section>


<style>
    .profile-section {
        padding-top: 30px !important;
        padding-bottom: 60px;
    }

    .profile-sidebar {
        margin-top: 0;
    }

    .profile-content {
        margin-top: 0;
    }

    .form-control {
        background: #f8f8f8;
        padding: 12px 15px;
        border-radius: 5px;
        border: 1px solid #ebebeb;
        font-size: 15px;
        color: #333;
    }

    /* Sidebar menu (Details ile aynı renk ve stil) */
    .profile-menu li {
       /*  padding: 12px 0; */
        font-size: 15px;
    }

        .profile-menu li a {
            color: #111; /* mavi değil, Details ile aynı */
            text-decoration: none;
        }

            .profile-menu li a:hover {
                color: #7fad39;
            }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}