@model ECommerceWeb.MVC.Models.UserInformation
@{
    ViewData["Title"] = "Edit Profile";
}

<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg" data-setbg="~/img/breadcrumb.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>Edit Profile</h2>
                    <div class="breadcrumb__option">
                        <a href="/">Home</a>
                        <a href="/profile/details">Profile</a>
                        <span>Edit</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->

<section class="contact spad">
    <div class="container">
        <div class="row">

            <!-- Menü -->
            <div class="col-lg-4 col-md-5">
                <div class="contact__sidebar">
                    <h4>Account Menu</h4>
                    <ul>
                        <li><a href="/profile/details">My Profile</a></li>
                        <li><a href="/profile/edit">Edit Profile</a></li>
                        <li><a href="/profile/my-orders">My Orders</a></li>
                        <li><a href="/profile/my-products">My Products</a></li>
                    </ul>
                </div>
            </div>

            <!-- Form Alanı -->
            <div class="col-lg-8 col-md-7">
                <div class="contact__content">

                    <h4 class="mb-4">Edit Profile Information</h4>

                    <form asp-action="Edit" method="post" class="contact__form">

                        <div class="row">

                            <div class="col-lg-6">
                                <input asp-for="FullName" placeholder="Full Name" />
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>

                            <div class="col-lg-6">
                                <input asp-for="Email" placeholder="Email" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="col-lg-6">
                                <input asp-for="Phone" placeholder="Phone" />
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>

                            <div class="col-lg-6">
                                <input asp-for="City" placeholder="City" />
                                <span asp-validation-for="City" class="text-danger"></span>
                            </div>

                            <div class="col-lg-12">
                                <input asp-for="Address" placeholder="Address" />
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>

                            <div class="col-lg-12">
                                <input asp-for="ZipCode" placeholder="Zip Code" />
                                <span asp-validation-for="ZipCode" class="text-danger"></span>
                            </div>

                            <div class="col-lg-12 text-center mt-3">
                                <button type="submit" class="site-btn">Save Changes</button>
                            </div>

                        </div>
                    </form>

                </div>
            </div>

        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
