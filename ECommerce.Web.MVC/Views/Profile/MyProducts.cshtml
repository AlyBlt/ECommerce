@model List<ECommerce.Application.ViewModels.ProductListingViewModel>

@{
    ViewData["Title"] = "My Products";
    var user = ViewBag.User as ECommerce.Application.ViewModels.UserInformationViewModel;
}

<section class="checkout profile-section">
    <div class="container">
        <div class="row">

            <!-- LEFT MENU -->
            <div class="col-lg-4 col-md-4">
                <div class="checkout__order profile-sidebar">
                    <h4>Account Menu</h4>
                    <ul class="list-group list-group-flush profile-menu">
                        <li class="list-group-item"><a href="/profile/details">My Profile</a></li>
                        <li class="list-group-item"><a href="/profile/edit">Edit Profile</a></li>
                        <li class="list-group-item"><a href="/profile/my-orders">My Orders</a></li>
                        <li class="list-group-item"><a href="/profile/my-products" class="active">My Products</a></li>
                    </ul>
                </div>
            </div>

            <!-- RIGHT CONTENT -->
            <div class="col-lg-8 col-md-8">
                <div class="checkout__form profile-content">
                    <h4 class="mb-4">My Products</h4>

                    @if (!Model.Any())
                    {
                        <div class="alert alert-info">No products found.</div>
                    }
                    else
                    {
                        <div class="row">

                            @foreach (var item in Model)
                            {
                                <div class="col-lg-12 mb-4">
                                    <div class="product-card">
                                        <!-- Product Image -->
                                        <div class="product-image"
                                             style="background-image: url('@item.ImageUrl');">
                                        </div>

                                        <!-- Product Info -->
                                        <div class="product-info mt-2">
                                            <h5>@item.Name</h5>
                                            <p class="category">Category: <strong>@item.Category</strong></p>
                                        </div>

                                        <!-- COMMENTS SECTION -->
                                        @if (item.Comments.Any())
                                        {
                                            <div class="comments mt-3">
                                                <h6 class="comment-title">Comments</h6>

                                                @foreach (var c in item.Comments)
                                                {
                                                    <div class="comment-box">
                                                        <div class="comment-header">
                                                            <strong>@c.UserName</strong>

                                                            <span class="rating">
                                                                @for (int i = 1; i <= c.Rating; i++)
                                                                {
                                                                    <span class="star">★</span>
                                                                }
                                                                @for (int i = 1; i <= (5 - c.Rating); i++)
                                                                {
                                                                    <span class="star empty">★</span>
                                                                }
                                                            </span>

                                                            @if (!c.IsApproved)
                                                            {
                                                                <span class="badge badge-warning">Pending Approval</span>
                                                            }
                                                        </div>

                                                        <p class="comment-text">@c.Text</p>
                                                    </div>
                                                }
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="no-comments mt-2">
                                                <em>No comments for this product.</em>
                                            </div>
                                        }

                                    </div>
                                </div>
                            }

                        </div>
                    }
                </div>
            </div>

        </div>
    </div>
</section>

<style>
    .profile-section {
        padding-top: 30px !important;
        padding-bottom: 60px;
    }

    .profile-sidebar, .profile-content {
        margin-top: 0;
    }

    .profile-menu li a {
        color: #111;
        text-decoration: none;
    }

        .profile-menu li a:hover {
            color: #7fad39;
        }

        .profile-menu li a.active {
            color: #111;
            font-weight: bold;
        }

    /* --- PRODUCT CARD --- */
    .product-card {
        background: #f8f8f8;
        border: 1px solid #ebebeb;
        border-radius: 5px;
        padding: 15px;
    }

    .product-image {
        width: 100%;
        height: 220px;
        background-size: cover;
        background-position: center;
        border-radius: 5px;
    }

    .price {
        font-size: 18px;
        font-weight: 600;
        margin-bottom: 5px;
    }

    .old-price {
        color: #e74c3c;
        margin-left: 5px;
    }

    .category {
        font-size: 14px;
        color: #777;
    }

    /* --- COMMENTS --- */
    .comments {
        background: #fff;
        border: 1px solid #ddd;
        padding: 15px;
        border-radius: 5px;
    }

    .comment-title {
        border-bottom: 1px solid #ddd;
        padding-bottom: 5px;
        margin-bottom: 10px;
    }

    .comment-box {
        padding: 8px 0;
        border-bottom: 1px solid #eee;
    }

        .comment-box:last-child {
            border-bottom: none;
        }

    .comment-header {
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .rating .star {
        color: gold;
        font-size: 14px;
    }

        .rating .star.empty {
            color: #ccc;
        }

    .comment-text {
        font-size: 14px;
        margin-top: 5px;
    }

    .badge-warning {
        background: #f6c23e;
        padding: 4px 8px;
        font-size: 12px;
        border-radius: 4px;
    }

    .no-comments {
        font-size: 13px;
        color: #666;
    }
</style>