@model ECommerce.Application.ViewModels.ProductListingViewModel
@{
    ViewData["Title"] = "Create Product";
}

<section class="contact-form spad">
    <div class="container">
        <h2>Create Product</h2>
        <form asp-action="Create" method="post">

            <!-- Product Name -->
            <div class="form-group mb-3">
                <label>Name<span class="text-danger">*</span></label>
                <input type="text" class="form-control" asp-for="Name" placeholder="Product Name" required />
                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
            </div>

            <!-- Category -->
            <div class="form-group mb-3">
                <label>Category<span class="text-danger">*</span></label>
                <select class="form-control" asp-for="CategoryId">
                    <option value="1">Category 1</option>
                    <option value="2">Category 2</option>
                    <option value="3">Category 3</option>
                </select>
                @Html.ValidationMessageFor(m => m.CategoryId, "", new { @class = "text-danger" })
            </div>

            <!-- Price -->
            <div class="form-group mb-3">
                <label>Price<span class="text-danger">*</span></label>
                <input type="number" class="form-control" asp-for="Price" placeholder="Price" min="0" step="0.01" required />
                @Html.ValidationMessageFor(m => m.Price, "", new { @class = "text-danger" })
            </div>

            <!-- Old Price -->
            <div class="form-group mb-3">
                <label>Old Price</label>
                <input type="number" class="form-control" asp-for="OldPrice" placeholder="Old Price (if on sale)" min="0" step="0.01" />
            </div>

            <!-- Image URL -->
            <div class="form-group mb-3">
                <label>Image URL<span class="text-danger">*</span></label>
                <input type="text" class="form-control" asp-for="ImageUrl" placeholder="Image URL" required />
                @Html.ValidationMessageFor(m => m.ImageUrl, "", new { @class = "text-danger" })
            </div>

            <button type="submit" class="site-btn">Create</button>
        </form>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}