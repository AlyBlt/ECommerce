@model ECommerceWeb.MVC.Models.HomeViewModels.ProductListingModel
@{
    ViewData["Title"] = "Edit Product";
}

<section class="contact-form spad">
    <div class="container">
        <h2>Edit Product</h2>
        <form asp-action="Edit" method="post">
            <input type="hidden" name="Id" value="@Model.Id" />
            <div class="form-group">
                <input type="text" class="form-control" name="Name" value="@Model.Name" required />
            </div>
            <div class="form-group">
                <input type="text" class="form-control" name="Category" value="@Model.Category" required />
            </div>
            <div class="form-group">
                <input type="number" class="form-control" name="Price" value="@Model.Price" required />
            </div>
            <div class="form-group">
                <input type="number" class="form-control" name="OldPrice" value="@Model.OldPrice" />
            </div>
            <div class="form-group">
                <input type="text" class="form-control" name="ImageUrl" value="@Model.ImageUrl" required />
            </div>
            <button type="submit" class="site-btn">Save Changes</button>
        </form>
    </div>
</section>