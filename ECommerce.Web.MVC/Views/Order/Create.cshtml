@model ECommerceWeb.MVC.Models.UserInformation
@{
    ViewData["Title"] = "Kullanıcı Bilgileri";
    Layout = "~/Views/Shared/_OganiLayout.cshtml";
}

<!-- Breadcrumb -->
<section class="breadcrumb-section set-bg" data-setbg="~/img/breadcrumb.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>Sipariş Oluştur</h2>
                    <div class="breadcrumb__option">
                        <a href="/">Ana Sayfa</a>
                        <span>Sipariş Oluştur</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<h2>Kullanıcı Bilgileri</h2>

<!-- Formu POST ile gönderiyoruz -->
<form asp-action="Create" method="post">
    <!-- Ad Soyad -->
    <div class="checkout__input">
        <p>Ad Soyad<span>*</span></p>
        <input type="text" asp-for="FullName" placeholder="Adınızı ve Soyadınızı girin" required />
        @Html.ValidationMessageFor(model => model.FullName, "", new { @class = "text-danger" })
    </div>

    <!-- Adres -->
    <div class="checkout__input">
        <p>Adres<span>*</span></p>
        <input type="text" asp-for="Address" placeholder="Sokak, bina, daire" class="checkout__input__add" required />
        @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
    </div>

    <!-- Şehir -->
    <div class="checkout__input">
        <p>Şehir<span>*</span></p>
        <input type="text" asp-for="City" placeholder="Şehir adı girin" required />
        @Html.ValidationMessageFor(model => model.City, "", new { @class = "text-danger" })
    </div>

    <!-- Posta Kodu -->
    <div class="checkout__input">
        <p>Posta Kodu<span>*</span></p>
        <input type="text" asp-for="ZipCode" placeholder="Posta kodu girin" required />
        @Html.ValidationMessageFor(model => model.ZipCode, "", new { @class = "text-danger" })
    </div>

    <!-- Telefon -->
    <div class="checkout__input">
        <p>Telefon<span>*</span></p>
        <input type="text" asp-for="Phone" placeholder="Telefon numaranızı girin" required />
        @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
    </div>

    <!-- Email -->
    <div class="checkout__input">
        <p>Email<span>*</span></p>
        <input type="email" asp-for="Email" placeholder="Email adresinizi girin" required />
        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
    </div>

    <!-- Formu gönderme butonu -->
    <button type="submit" class="site-btn">Kaydet ve Ödeme Sayfasına Geç</button>
</form>

<!-- Sayfa doğrulama için gerekli JavaScript dosyalarını dahil et -->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}