@model ECommerce.Application.ViewModels.UserInformationViewModel
@{
    ViewData["Title"] = "User Information";
    Layout = "~/Views/Shared/_OganiLayout.cshtml";
}


<!-- Checkout User Information -->
<section class="checkout spad">
    <div class="container">
        <div class="row justify-content-center">

            <div class="col-lg-8 col-md-10">
                <div class="checkout__form">

                    <h4 class="mb-4">User Information</h4>

                    @Html.ValidationSummary(false, "", new { @class = "text-danger mb-3" })

                    <form asp-controller="Order" asp-action="Create" method="post">

                        <div class="row">

                            <!-- Full Name -->
                            <div class="col-lg-12 mb-3">
                                <label>Full Name<span>*</span></label>
                                <input type="text" asp-for="FullName" class="form-control" placeholder="Enter your full name" required />
                                @Html.ValidationMessageFor(m => m.FullName, "", new { @class = "text-danger" })
                            </div>

                            <!-- Address -->
                            <div class="col-lg-12 mb-3">
                                <label>Address<span>*</span></label>
                                <input type="text" asp-for="Address" class="form-control" placeholder="Street, building, apartment" required />
                                @Html.ValidationMessageFor(m => m.Address, "", new { @class = "text-danger" })
                            </div>

                            <!-- Phone -->
                            <div class="col-lg-6 mb-3">
                                <label>Phone<span>*</span></label>
                                <input type="text" asp-for="Phone" class="form-control" placeholder="Enter your phone number" required />
                                @Html.ValidationMessageFor(m => m.Phone, "", new { @class = "text-danger" })
                            </div>

                            <!-- Email -->
                            <div class="col-lg-6 mb-3">
                                <label>Email<span>*</span></label>
                                <input type="email" asp-for="Email" class="form-control" placeholder="Enter your email address" required />
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="mt-4 text-end">
                            <button type="submit" class="site-btn">Save and Proceed to Payment</button>
                        </div>

                    </form>
                </div>
            </div>

        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .checkout__form label {
        font-weight: 600;
        margin-bottom: 5px;
    }

    .checkout__form input.form-control {
        border-radius: 5px;
        height: 45px;
    }
</style>