@using ECommerceWeb.MVC.Models.OrderviewModels
@model UserInformation
@{
    ViewData["Title"] = "User Information";
    Layout = "~/Views/Shared/_OganiLayout.cshtml";
}

<!-- Breadcrumb -->
<section class="breadcrumb-section set-bg" data-setbg="~/img/breadcrumb.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>Create Order</h2>
                    <div class="breadcrumb__option">
                        <a href="/">Home</a>
                        <span>Create Order</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<h2>User Information</h2>

<!-- Form submitted with POST -->
<form asp-action="Create" method="post">
    <!-- Full Name -->
    <div class="checkout__input">
        <p>Full Name<span>*</span></p>
        <input type="text" asp-for="FullName" placeholder="Enter your full name" required />
        @Html.ValidationMessageFor(model => model.FullName, "", new { @class = "text-danger" })
    </div>

    <!-- Address -->
    <div class="checkout__input">
        <p>Address<span>*</span></p>
        <input type="text" asp-for="Address" placeholder="Street, building, apartment" class="checkout__input__add" required />
        @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
    </div>

    <!-- City -->
    <div class="checkout__input">
        <p>City<span>*</span></p>
        <input type="text" asp-for="City" placeholder="Enter city name" required />
        @Html.ValidationMessageFor(model => model.City, "", new { @class = "text-danger" })
    </div>

    <!-- Zip Code -->
    <div class="checkout__input">
        <p>Zip Code<span>*</span></p>
        <input type="text" asp-for="ZipCode" placeholder="Enter zip code" required />
        @Html.ValidationMessageFor(model => model.ZipCode, "", new { @class = "text-danger" })
    </div>

    <!-- Phone -->
    <div class="checkout__input">
        <p>Phone<span>*</span></p>
        <input type="text" asp-for="Phone" placeholder="Enter your phone number" required />
        @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
    </div>

    <!-- Email -->
    <div class="checkout__input">
        <p>Email<span>*</span></p>
        <input type="email" asp-for="Email" placeholder="Enter your email address" required />
        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
    </div>

    <!-- Submit Button -->
    <button type="submit" class="site-btn">Save and Proceed to Payment</button>
</form>

<!-- Include validation scripts -->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}