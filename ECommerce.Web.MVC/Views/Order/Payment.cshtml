@using ECommerceWeb.MVC.Models.OrderviewModels
@model PaymentInformation
@{
    ViewData["Title"] = "Complete Order";
    Layout = "~/Views/Shared/_OganiLayout.cshtml";
}



<section class="checkout spad">
    <div class="container">
        <div class="row justify-content-center">

            <div class="col-lg-8 col-md-10">
                <div class="checkout__form">

                    <h4 class="mb-4">Select Payment Method</h4>

                    @Html.ValidationSummary(false, "", new { @class = "text-danger mb-3" })

                    <form asp-action="Payment" method="post">

                        <div class="checkout__input__checkbox mb-3">
                            <label>
                                <input type="radio" asp-for="PaymentMethod" value="Credit Card" />
                                Credit Card
                                <span class="checkmark"></span>
                            </label>
                        </div>

                        <div class="checkout__input__checkbox mb-3">
                            <label>
                                <input type="radio" asp-for="PaymentMethod" value="Cash on Delivery" />
                                Cash on Delivery
                                <span class="checkmark"></span>
                            </label>
                        </div>

                        <div class="checkout__input__checkbox mb-3">
                            <label>
                                <input type="radio" asp-for="PaymentMethod" value="Bank Transfer" />
                                Bank Transfer (EFT)
                                <span class="checkmark"></span>
                            </label>
                        </div>

                        <div class="mt-4 text-end">
                            <button type="submit" class="site-btn">Complete Order</button>
                        </div>
                    </form>

                </div>
            </div>

        </div>
    </div>
</section>

<style>
    .checkout__input__checkbox label {
        font-size: 16px;
        font-weight: 500;
        cursor: pointer;
    }

    .checkout__input__checkbox input[type="radio"] {
        margin-right: 10px;
        transform: scale(1.2);
        cursor: pointer;
    }

    .checkout__form h4 {
        font-weight: 600;
    }
</style>