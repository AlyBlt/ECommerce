@using ECommerceWeb.MVC.Models.OrderviewModels
@model PaymentInformation
@{
    ViewData["Title"] = "Complete Order";
    Layout = "~/Views/Shared/_OganiLayout.cshtml";
}

<!-- Breadcrumb -->
<section class="breadcrumb-section set-bg" data-setbg="~/img/breadcrumb.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>Create Order</h2>
                    <div class="breadcrumb__option">
                        <a href="/">Home</a>
                        <span>Create Order</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<h2>Select Payment Method</h2>
<form asp-action="Payment" method="post">

    <div>
        <label>
            <input type="radio" name="PaymentMethod" value="Credit Card" /> Credit Card
        </label>
    </div>
    <div>
        <label>
            <input type="radio" name="PaymentMethod" value="Cash on Delivery" /> Cash on Delivery
        </label>
    </div>
    <div>
        <label>
            <input type="radio" name="PaymentMethod" value="Bank Transfer" /> Bank Transfer (EFT)
        </label>
    </div>

    <button type="submit" class="site-btn">Complete Order</button>
</form>

@if (!ViewData.ModelState.IsValid)
{
    <p class="text-danger">You must select a payment method.</p>
}