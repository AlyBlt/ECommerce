@using ECommerceWeb.MVC.Models.OrderviewModels
@model Order
@{
    ViewData["Title"] = "Order Details";
    Layout = "~/Views/Shared/_OganiLayout.cshtml";
}

<!-- Breadcrumb -->
<section class="breadcrumb-section set-bg" data-setbg="~/img/breadcrumb.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>Order Details</h2>
                    <div class="breadcrumb__option">
                        <a href="/">Home</a>
                        <span>Order</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Order Details Section -->
<section class="shoping-cart spad">
    <div class="container">

        <!-- Order Information -->
        <div class="row mb-4">
            <div class="col-lg-12">
                <div class="shoping__details">

                    <h4 class="mb-3">Order Completed</h4>

                    <p><strong>Order No:</strong> @Model.Id</p>
                    <p><strong>Date:</strong> @Model.CreatedDate.ToString("dd.MM.yyyy HH:mm")</p>
                    <p><strong>Total Price:</strong> @Model.TotalPrice ₺</p>
                    <p><strong>Payment Method:</strong> @Model.PaymentMethod</p>

                    <hr />

                    <h4>User Information</h4>
                    <p><strong>Full Name:</strong> @Model.UserInformation.FullName</p>
                    <p><strong>Address:</strong> @Model.UserInformation.Address</p>
                    <p><strong>City:</strong> @Model.UserInformation.City</p>
                    <p><strong>Zip Code:</strong> @Model.UserInformation.ZipCode</p>
                    <p><strong>Phone:</strong> @Model.UserInformation.Phone</p>
                    <p><strong>Email:</strong> @Model.UserInformation.Email</p>

                </div>
            </div>
        </div>

        <!-- Order Products -->
        <h4 class="mb-3">Order Products</h4>

        <div class="shoping__cart__table">
            <table>
                <thead>
                    <tr>
                        <th class="shoping__product">Product</th>
                        <th>Quantity</th>
                        <th>Price</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td class="shoping__cart__item">
                                <img src="~/img/cart/cart-1.jpg" alt="">
                                <h5>@item.Name</h5>
                            </td>
                            <td class="shoping__cart__quantity">@item.Quantity</td>
                            <td class="shoping__cart__price">@item.Price ₺</td>
                            <td class="shoping__cart__total">@item.TotalPrice ₺</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Total Price -->
        <div class="shoping__cart__total mt-4">
            <h4><strong>Total Amount:</strong> @Model.TotalPrice ₺</h4>
        </div>
    </div>
</section>