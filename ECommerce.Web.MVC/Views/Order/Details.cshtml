@model ECommerce.Web.Mvc.Models.Order.OrderDetailsViewModel
@{
    ViewData["Title"] = "Order Details";
   

    // Toplam tutarı item'lerin toplamından hesaplıyoruz
    var totalAmount = Model.Items.Sum(i => i.TotalPrice);
}
@if (User.IsInRole("Buyer") || User.IsInRole("Seller"))
{
<!-- Order Details Section -->
<section class="checkout spad">
    <div class="container">

        <!-- ORDER SUMMARY BOX -->
        <div class="row mb-5">
            <div class="col-lg-12">
                <div class="checkout__order p-4">

                    <h4 class="mb-4">Order Summary</h4>

                    <div class="row">
                        <div class="col-md-6 mb-2">
                            <strong>Order No:</strong> @Model.Id
                        </div>
                        <div class="col-md-6 mb-2">
                            <strong>Date:</strong> @Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")
                        </div>
                        <div class="col-md-6 mb-2">
                            <strong>Payment:</strong> @Model.PaymentMethod
                        </div>
                            <div class="col-md-6 mb-2">
                                <strong>Delivery Name:</strong> @Model.DeliveryFullName
                            </div>
                            <div class="col-md-6 mb-2">
                                <strong>Delivery Phone:</strong> @Model.DeliveryPhone
                            </div>
                            <!-- Delivery Address-->
                            <div class="col-md-6 mb-2">
                                <strong>Delivery Address:</strong> @Model.PaymentInformation.DeliveryAddress
                            </div>
                        <div class="col-md-6 mb-2">
                            <strong>Total Price:</strong> $ @totalAmount.ToString("0.00", System.Globalization.CultureInfo.GetCultureInfo("en-US")) 
                        </div>
                    </div>

                </div>
            </div>
        </div>

        <!-- USER INFORMATION -->
        <div class="row mb-5">
            <div class="col-lg-12">
                <div class="checkout__form p-4">

                    <h4 class="mb-4">User Information</h4>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label>Full Name</label>
                            <div class="profile__info-box">@Model.UserInformation.FullName</div>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label>Email</label>
                            <div class="profile__info-box">@Model.UserInformation.Email</div>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label>Phone</label>
                            <div class="profile__info-box">@Model.UserInformation.Phone</div>
                        </div>

                        <div class="col-md-12 mb-3">
                            <label>Address</label>
                            <div class="profile__info-box">@Model.UserInformation.Address</div>
                        </div>
                    </div>

                </div>
            </div>
        </div>

        <!-- PRODUCTS -->
        <div class="row mb-4">
            <div class="col-lg-12">
                <h4 class="mb-3">Order Products</h4>

                <div class="shoping__cart__table">
                    <table>
                        <thead>
                            <tr>
                                <th class="shoping__product">Product</th>
                                <th>Quantity</th>
                                <th>Price</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Items)
                            {
                                <tr>
                                    <td class="shoping__cart__item">
                                        <img src="@Url.Content(item.ImageUrl)" alt="@item.ProductName" style="width: 80px; height: 80px;">
                                        <h5>@item.ProductName</h5>
                                    </td>
                                    <td class="shoping__cart__quantity">@item.Quantity</td>
                                    <td class="shoping__cart__price">$ @item.UnitPrice.ToString("0.00", System.Globalization.CultureInfo.GetCultureInfo("en-US"))</td>
                                    <td class="shoping__cart__total">$ @item.TotalPrice.ToString("0.00", System.Globalization.CultureInfo.GetCultureInfo("en-US"))</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- TOTAL AMOUNT -->
        <div class="row mt-4">
            <div class="col-lg-12 text-end">
                <h4><strong>Total Amount:</strong> $ @totalAmount.ToString("0.00", System.Globalization.CultureInfo.GetCultureInfo("en-US"))</h4>
            </div>
        </div>

    </div>
</section>
}
else
{
    <div class="alert alert-warning text-center mt-4">
        You are not authorized to access this page.
    </div>
}

<style>
    .profile__info-box {
        background: #f8f8f8;
        padding: 12px 15px;
        border-radius: 5px;
        border: 1px solid #ebebeb;
        font-size: 15px;
        color: #333;
    }
</style>