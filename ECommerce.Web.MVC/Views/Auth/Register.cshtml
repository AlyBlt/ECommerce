@model ECommerce.Application.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Signup";
}

@section Styles {
    <link rel="stylesheet" href="~/css/auth-style.css" asp-append-version="true" />
}

<div class="auth-wrapper">
    <div class="container">
        <div class="login form">
            <header>Signup</header>
            <form asp-action="Register" method="post">
                <div class="checkout__input">
                    <p>Full Name <span>*</span></p>
                    <input asp-for="Username" type="text" placeholder="Enter your full name" class="form-control" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="checkout__input">
                    <p>Email <span>*</span></p>
                    <input asp-for="Email" type="email" placeholder="Enter your email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="checkout__input">
                    <p>Password <span>*</span></p>
                    <input asp-for="Password" type="password" placeholder="Create a password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="checkout__input">
                    <p>Confirm Password <span>*</span></p>
                    <input asp-for="ConfirmPassword" type="password" placeholder="Confirm your password" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="mt-3">
                    <button type="submit" class="site-btn">Signup</button>
                </div>
            </form>

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="text-danger mt-2">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <p>@error.ErrorMessage</p>
                    }
                </div>
            }

            <div class="signup mt-3">
                <span>
                    Already have an account?
                    <a asp-controller="Auth" asp-action="Login">Login</a>
                </span>
            </div>

        </div>
    </div>
</div>