@{
    
    ViewData["Title"] = "Profil Bilgileri";
}

<section class="checkout spad">
    <div class="container">
        <div class="row">

            <div class="col-lg-8">
                <div class="checkout__form">
                    <h4>Profil Bilgileri</h4>
                    <form>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="checkout__input">
                                    <p>Kullanıcı Adı <span>*</span></p>
                                    <input type="text" value="@ViewBag.Username" readonly />
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="checkout__input">
                                    <p>Email <span>*</span></p>
                                    <input type="email" value="@ViewBag.Email" readonly />
                                </div>
                            </div>
                        </div>
                        <a asp-action="Edit" class="site-btn">Bilgileri Düzenle</a>
                        <a asp-controller="Auth" asp-action="Logout" class="site-btn mt-3">Çıkış Yap</a>
                    </form>
                </div>
            </div>

        </div>
    </div>
</section>
