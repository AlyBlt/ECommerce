@model ECommerceWeb.MVC.Models.AuthViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

@section Styles {
    <link rel="stylesheet" href="~/css/auth-style.css" asp-append-version="true" />
}

<div class="auth-wrapper">
    <div class="container">
        <input type="checkbox" id="check">
        <div class="login form">
            <header>Login</header>
            <form asp-action="Login" method="post">
                <div class="checkout__input">
                    <p>Email <span>*</span></p>
                    <input asp-for="Email" type="email" placeholder="Enter your email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="checkout__input">
                    <p>Password <span>*</span></p>
                    <input asp-for="Password" type="password" placeholder="Enter your password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="mt-3">
                    <button type="submit" class="site-btn">Login</button>
                </div>
            </form>

            <div class="mt-3">
                <a asp-controller="Auth" asp-action="ForgotPassword">Forgot password?</a><br />
                <a asp-controller="Auth" asp-action="Register">Signup</a>
            </div>

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="text-danger mt-2">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <p>@error.ErrorMessage</p>
                    }
                </div>
            }
        </div>
    </div>
</div>
