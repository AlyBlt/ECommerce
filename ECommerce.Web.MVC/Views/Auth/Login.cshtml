@model ECommerceWeb.MVC.Models.AuthViewModels.LoginViewModel
@{
        ViewData["Title"] = "Login";
}

@section Styles {
    <link rel="stylesheet" href="~/css/auth-style.css" asp-append-version="true" />
}

<div class="auth-wrapper">
    <div class="container">
        <input type="checkbox" id="check">
        <div class="login form">
            <header>Login</header>
            <form asp-action="Login" method="post">
                <div class="checkout__input">
                    <p>Email <span>*</span></p>
                    <input asp-for="Email" type="email" placeholder="Enter your email"/>
                    <span asp-validation-for="Email" class="text-danger"></span>
                    <input asp-for="Password" type="password" placeholder="Enter your password"/>
                    <span asp-validation-for="Password" class="text-danger"></span>
                    <button type="submit" class="site-btn">Login</button>
                </div>
            </form>
            <div class="mt-3">
                <a asp-action="ForgotPassword">Forgot password?</a><br />
                <a asp-action="Register">Signup</a>
            </div>
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="text-danger mt-2">
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <p>@error.ErrorMessage</p>
                        }
                    </div>
                }
            </div>
        </div>
 </div>
