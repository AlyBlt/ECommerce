@model ECommerceWeb.MVC.Models.Cart
@{
    ViewData["Title"] = "Sepet Test";
}

<div class="container mt-4">
    <h2 class="mb-3">Sepet Test Sayfası</h2>

    <!-- Sepet boş uyarısı -->
    <!-- Sepet boş veya işlemlerle ilgili mesajlar -->
@if (TempData["Error"] != null)
{
        <div class="alert alert-warning">@TempData["Error"]</div>
}
@if (TempData["Message"] != null)
{
        <div class="alert alert-success">@TempData["Message"]</div>
}

    <!-- Sepeti Temizle Butonu -->
    <form asp-controller="Cart" asp-action="Clear" method="post" class="mb-3">
        <button type="submit" class="btn btn-danger">Sepeti Temizle</button>
    </form>

    <!-- Ürün Ekleme Formu -->
    <div class="card mb-4 p-3">
        <h4>Ürün Ekle</h4>
        <form asp-controller="Cart" asp-action="AddProduct" method="post" class="row g-3 align-items-end">
            <div class="col-md-3">
                <label>Ürün Adı:</label>
                <input type="text" name="name" value="Elma" class="form-control" />
            </div>
            <div class="col-md-2">
                <label>Fiyat:</label>
                <input type="number" name="price" value="10" step="0.01" class="form-control" />
            </div>
            <div class="col-md-2">
                <label>Adet:</label>
                <input type="number" name="quantity" value="1" class="form-control" />
            </div>
            <input type="hidden" name="productId" value="1" />
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100">Sepete Ekle</button>
            </div>
        </form>
    </div>

    <!-- Sepet -->
    <h4>Sepetteki Ürünler</h4>
    @if (Model.Items.Any())
    {
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Ürün</th>
                    <th>Fiyat</th>
                    <th>Adet</th>
                    <th>Toplam</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Price ₺</td>
                        <td>@item.Quantity</td>
                        <td>@item.TotalPrice ₺</td>
                    </tr>
                }
                <tr>
                    <td colspan="3" class="text-end"><strong>Genel Toplam</strong></td>
                    <td><strong>@Model.TotalPrice ₺</strong></td>
                </tr>
            </tbody>
        </table>
    }
    else
    {
        <p class="text-muted">Sepet boş.</p>
    }

    <br />
    <!-- İki seçenek sunuyoruz -->
    <a href="@Url.Action("Index", "Home")">Ana Sayfaya Dön</a> |
    <a href="@Url.Action("Create", "Order")">Ödeme Sayfasına Git</a>

@section Scripts {
        <script>
            document.getElementById("goToPayment").addEventListener("click", function(e){
                var itemCount = @Model.Items.Count;
                if(itemCount == 0){
                    e.preventDefault(); // Linke tıklamayı engelle
                    alert("Sepetiniz boş. Ödeme sayfasına geçemezsiniz!");
                }
            });
        </script>
}
