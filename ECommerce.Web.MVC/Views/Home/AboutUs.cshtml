@using ECommerce.Web.Mvc
@using ECommerce.Web.Mvc.Models
@using ECommerce.Web.Mvc.Models.Category
@using ECommerce.Web.Mvc.Models.Home
@{
    ViewData["Title"] = "About Us";
    ViewData["PageTitle"] = ViewData["Title"];  // Dinamik baþlýk
    var isAdmin = User.IsInRole("Admin");
    var categories = ViewBag.Categories as List<CategoryViewModel> ?? new List<CategoryViewModel>();
    var productListingViewModel = new ProductListingViewModel
    {
        Categories = categories
    };
}

@Html.Partial("_HeroSection", productListingViewModel)


<section class="contact spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-8 mx-auto text-center">

                <img src="/img/logo.png" class="img-fluid d-block mx-auto" style="width: 100px; margin-bottom: 30px; border-radius:5px;" alt="Logo">

                <div class="about__text">
                    <div class="section-title">
                        <h2>Who We Are</h2>
                    </div>

                    <p>
                        We are an organic farm located in the heart of nature. Since 2010, we have been providing
                        fresh, healthy, and 100% organic vegetables to our customers.
                    </p>

                    <p>
                        Vestibulum ac diam sit amet quam vehicula elementum sed sit amet dui.
