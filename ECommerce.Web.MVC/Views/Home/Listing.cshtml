@using ECommerce.Web.Mvc
@using ECommerce.Web.Mvc.Models
@using ECommerce.Web.Mvc.Models.Category
@model ECommerce.Web.Mvc.Models.Home.ProductListingViewModel

@{
    ViewData["Title"] = "Shop";
    ViewData["PageTitle"] = ViewData["Title"];
    var isAdmin = User.IsInRole("Admin");
  
}
@Html.AntiForgeryToken()

@Html.Partial("_HeroSection", Model)


<!-- Sidebar + Products -->
<section class="product spad">
    <div class="container">
        <div class="row">

          <!-- Sidebar with filters -->
            <div class="col-lg-3 col-md-5">
                <div class="sidebar">
                    <div class="sidebar__item">
                        <h4 style="font-size: 26px;">Filters</h4>
                        <ul>
                            <li><a href="?filter=all-products" style="font-size: 18px;">All Products</a></li>
                            <li><a href="?filter=top-rated" style="font-size: 18px;">Top Rated</a></li>
                            <li><a href="?filter=on-sale" style="font-size: 18px;">On Sale</a></li>
                            <li><a href="?filter=new-arrivals" style="font-size: 18px;">New Arrivals</a></li>
                            <li>
                                <a href="javascript:void(0);" id="current-deals-toggle" style="font-size: 18px;">Current Deals <i class="fa fa-caret-down"></i></a>
                                <ul id="current-deals-options" style="display: none;">
                                    <li><a href="?filter=free-shipping" style="font-size: 16px;"><em>Special Offer: Free Shipping On Orders Over $30</em></a></li>
                                    <li><a href="?filter=on-sale" style="font-size: 16px;"><em>Limited Time: Save Up To 40%</em></a></li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Product Grid -->
            <div class="col-lg-9 col-md-7">
                <div class="row">
                    @foreach (var product in Model.Products)
                    {
                        <div class="col-lg-4 col-md-6 col-sm-6">
                            <div class="product__item">

                                <div class="product__item__pic set-bg" data-setbg="@Url.Content(product.ImageUrl)">
                                    <!-- Fotoðrafýn üzerine link ekliyoruz -->
                                    <a href="@Url.Action("ProductDetail", "Home", new { id = product.Id })" class="product-link"></a>
                                    @if (product.IsOnSale)
                                    {
                                        <div class="product__discount__percent">
                                            -@((int)((product.OldPrice - product.Price) / product.OldPrice * 100))%
                                        </div>
                                    }
                                                                      

                                    <ul class="product__item__pic__hover">
                                        @if (User.IsInRole("Admin"))
                                        {
                                        <li>
                                                <a href="javascript:void(0);" style="cursor: not-allowed; opacity: 0.5;" title="Admins cannot add favorites" class="admin-disabled">
                                                <i class="fa fa-heart"></i>
                                            </a>
                                        </li>
                                       
                                            <li><a href="javascript:void(0);" style="cursor: not-allowed; opacity: 0.5;" class="admin-disabled"><i class="fa fa-retweet"></i></a></li>
                                        
                                        }
                                        else
                                        {
                                            <li>
                                            <a href="#" class="favorite-btn" data-product-id="@product.Id">
                                                <i class="fa fa-heart"></i>
                                            </a>
                                            </li>
                                            <li><a href="#"><i class="fa fa-retweet"></i></a></li>
                                        }
                                      
                                       @*  <li><a asp-controller="Cart" asp-action="AddProduct" asp-route-id="@product.Id"><i class="fa fa-shopping-cart"></i></a></li> *@
                                       
                                    </ul>
                                </div>

                                <div class="product__item__text">
                                    <h6 class="fw-bold"><a href="#" style="font-size:18px;">@product.Name</a></h6>
                                    <!-- Yýldýz Puaný ve Yorum Sayýsý -->
                                    <div class="rating-area">
                                        <span class="stars">
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                if (i <= product.Rating)
                                                {
                                                    <i class="fa fa-star"></i>
                                                }
                                                else
                                                {
                                                    <i class="fa fa-star-o"></i>
                                                }
                                            }
                                        </span>

                                        <span class="review-count">
                                            (@product.ReviewCount reviews)
                                        </span>
                                    </div>
                                    <h5>
                                        <!-- Product Price Formatting with Decimal -->
                                        $@product.Price.ToString("0.00", System.Globalization.CultureInfo.InvariantCulture)

                                        @if (product.IsOnSale)
                                        {
                                             <!-- Old Price Formatting with Decimal -->
                                        <del>$@product.OldPrice?.ToString("0.00", System.Globalization.CultureInfo.InvariantCulture)</del>
                                        }
                                    </h5>

                                  
                                    <form class="add-to-cart-form mt-2 d-flex align-items-center" data-product-id="@product.Id">
                                        <input type="hidden" name="productId" value="@product.Id" />
                                        <input type="hidden" name="name" value="@product.Name" />
                                        <input type="hidden" name="price" value="@product.Price" />
                                        <input type="hidden" name="imageUrl" value="@product.ImageUrl" />
                                        <input type="number" name="quantity" value="1" min="1" style="width:50px; margin-right:10px;" />
                                        @if (!product.Enabled)
                                            {
                                                <button class="site-btn" disabled
                                                style="opacity:0.5; cursor:not-allowed;">
                                                    NOT AVAILABLE
                                                </button>
                                            }
                                            else
                                            {
                                                @if (User.IsInRole("Admin"))
                                                {
                                                <button type="submit" class="site-btn" style="opacity:0.5; cursor:not-allowed;" title="Admins cannot shop">
                                                    <i class="fa fa-shopping-cart"></i> Add to Cart
                                                </button>
                                                }
                                                else 
                                                { 
                                                <button type="submit" class="site-btn">
                                                    <i class="fa fa-shopping-cart"></i> Add to Cart
                                                </button>
                                                }
                                            }
                                    </form>

                                </div>

                            </div>
                        </div>
                    }
                </div>

                <!-- Pagination -->
                <div class="product__pagination mt-4">
                    @if (Model.CurrentPage > 1)
                    {
                        <a href="@Url.Action("Listing", new { page = Model.CurrentPage - 1, filter = Model.Filter, category = Model.Category })"><i class="fa fa-long-arrow-left"></i></a>
         
                    }

                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <a href="@Url.Action("Listing", new { page = i, filter = Model.Filter, category = Model.Category })" class="@(i == Model.CurrentPage ? "active" : "")">@i</a>
                    }

                    @if (Model.CurrentPage < Model.TotalPages)
                    {
                        <a href="@Url.Action("Listing", new { page = Model.CurrentPage + 1, filter = Model.Filter, category = Model.Category })"><i class="fa fa-long-arrow-right"></i></a>
                    }
                </div>

            </div>
        </div>
    </div>
</section>

<style>
    .product__item__pic {
        width: 100%;
        height: 250px;
        background-size: cover;
        background-position: center center;
    } 
    .product-link {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1; /* Linkin alt seviyeye yerleþtirilmesi için */
}

.product__item__pic__hover {
    position: absolute;
    z-index: 10; /* Ýkonlarý ön plana almak için z-index artýrýldý */
}

.rating-area .stars {
        color: #FFD700;
}

    /* Styling for the Current Deals dropdown */
    #current-deals-toggle {
        cursor: pointer;
        display: flex;
        @* justify-content: space-between; *@
        align-items: center;
        gap: 20px;
    }

    #current-deals-options {
       
        list-style-type: none;
        padding-left: 0;
    }

        #current-deals-options li {
           
        }

            #current-deals-options li a {
                color: #333;
                text-decoration: none;
                display: block;
               
                background-color: #f8f8f8;
                border-radius: 4px;
            }

                #current-deals-options li a:hover {
                    background-color: #ddd;
                }

    .product__item__text .site-btn:hover {
        opacity: 0.8; /* Ýkon biraz daha þeffaf hale gelir */
    }
</style>



@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var buttons = document.querySelectorAll(".favorite-btn");

            buttons.forEach(function (btn) {
                btn.addEventListener("click", function (e) {
                    e.preventDefault();

                    var productId = this.getAttribute("data-product-id");

                    fetch("/Favorites/Add", {
                        method: "POST",
                        headers: {
                            "Content-Type": "application/x-www-form-urlencoded",
                            "RequestVerificationToken": document.querySelector('input[name="__RequestVerificationToken"]').value
                        },
                        body: "productId=" + productId
                    })
                        .then(response => {
                            if (response.ok) {
                                var countSpan = document.getElementById("header-favorites-count");
                                if (countSpan) {
                                    countSpan.textContent = parseInt(countSpan.textContent || "0") + 1;
                                }
                                alert("Product added to favorites!");
                            } else {
                                alert("Failed to add favorite");
                            }
                        })
                        .catch(err => console.error(err));
                });
            });
        });

        
        document.addEventListener("DOMContentLoaded", function () {
            // Current Deals toggle button
            const currentDealsToggle = document.getElementById("current-deals-toggle");
            const currentDealsOptions = document.getElementById("current-deals-options");

            // Event listener for toggling the dropdown menu
            currentDealsToggle.addEventListener("click", function () {
                // Toggle the display of the current deals options
                if (currentDealsOptions.style.display === "none" || currentDealsOptions.style.display === "") {
                    currentDealsOptions.style.display = "block";  // Show options
                    currentDealsToggle.innerHTML = "Current Deals <i class='fa fa-caret-up'></i>";  // Change the caret icon
                } else {
                    currentDealsOptions.style.display = "none";  // Hide options
                    currentDealsToggle.innerHTML = "Current Deals <i class='fa fa-caret-down'></i>";  // Change the caret icon back
                }
            });
        });

                
        document.addEventListener("DOMContentLoaded", function () {
            const forms = document.querySelectorAll(".add-to-cart-form");
            const token = document.querySelector('input[name="__RequestVerificationToken"]').value;

            forms.forEach(form => {
                form.addEventListener("submit", function (e) {
                    e.preventDefault();

                    const productId = this.dataset.productId;
                    const name = this.querySelector('input[name="name"]').value;
                    const price = this.querySelector('input[name="price"]').value;
                    const imageUrl = this.querySelector('input[name="imageUrl"]').value;
                    const quantity = this.querySelector('input[name="quantity"]').value;

                    fetch("/Cart/AddProduct", {
                        method: "POST",
                        headers: {
                            "Content-Type": "application/x-www-form-urlencoded",
                            "RequestVerificationToken": token
                        },
                       body: `productId=${productId}&name=${encodeURIComponent(name)}&price=${price}&imageUrl=${encodeURIComponent(imageUrl)}&quantity=${quantity}`
                    })
                    .then(res => res.json())
                    .then(data => {
                        if(data.success){
                            // Header cart count güncelle
                            const cartCountSpan = document.getElementById("cart-count");
                            if(cartCountSpan){
                                cartCountSpan.textContent = data.cartCount;
                            }
                                  // Header cart total güncelle
                             const cartTotalSpan = document.getElementById("cart-total");
                            if(cartTotalSpan){
                            cartTotalSpan.textContent = "$ " + data.cartTotal.toFixed(2);
                            }

                            alert("Product added to cart!");
                        } else {
                            alert("Failed to add product!");
                        }
                    })
                    .catch(err => console.error(err));
                });
            });
        });
    </script>
}

