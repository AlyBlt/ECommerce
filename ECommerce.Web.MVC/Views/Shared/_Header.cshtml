<!-- Header Section Begin -->     @* Controller/Actionlara göre düzenlenecek, Menu linkleri doğru actionlara bağlanacak *@
@{
    ViewBag.CartCount = Context.Session.GetInt32("CartCount") ?? 0;
    ViewBag.FavoritesCount = Context.Session.GetInt32("FavoritesCount") ?? 0;
}
<header class="header">
    <!-- Header Top Begin -->
    <div class="header__top">
        <div class="container">
            <div class="row">
                <!-- Sol Kısım: Email + Free Shipping -->
                <div class="col-lg-6 col-md-6">
                    <div class="header__top__left">
                        <ul>
                            <li><i class="fa fa-envelope"></i> apple@helloworld.com</li>
                            <li>Free Shipping for all Order of $99</li>
                        </ul>
                    </div>
                </div>
                <!-- Sağ Kısım: Sosyal + Dil + Login -->
                <div class="col-lg-6 col-md-6">
                    <div class="header__top__right">
                        <!-- Sosyal ikonlar -->
                        <div class="header__top__right__social">
                            <a href="#"><i class="fa fa-facebook"></i></a>
                            <a href="#"><i class="fa fa-twitter"></i></a>
                            <a href="#"><i class="fa fa-linkedin"></i></a>
                            <a href="#"><i class="fa fa-pinterest-p"></i></a>
                        </div>
                        <!-- Dil seçimi -->
                        <div class="header__top__right__language">
                            <img src="~/img/language.png" alt="Language">
                            <div>English</div>
                            <span class="arrow_carrot-down"></span>
                            <ul>
                                <li><a href="#">Spanish</a></li>
                                <li><a href="#">English</a></li>
                            </ul>
                        </div>
                        <!-- Login -->
                        <div class="header__top__right__auth">
                            <!-- Login/Logout -->
                            @* Burada durum şu ödeme için mesela userinformation girince de login gibi algılıyor
                            header da login olmuş gibi lougout ve isim çıkıyor--veritabanında bu çözülecek! *@
                            @{
                                var userJson = Context.Session.GetString("UserInfo");
                                bool isLoggedIn = !string.IsNullOrEmpty(userJson);
                                ECommerce.Application.ViewModels.UserInformationViewModel user = null;

                                if (isLoggedIn)
                                {
                                    user = System.Text.Json.JsonSerializer.Deserialize<ECommerce.Application.ViewModels.UserInformationViewModel>(userJson);
                                }
                            }

                            <div class="header__top__right__auth">
                                @if (isLoggedIn)
                                {
                                    <a asp-controller="Auth" asp-action="LogOut">
                                        <i class="fa fa-sign-out"></i> Logout
                                    </a>
                                    <span class="ml-2"><i class="fa fa-user"></i> @user.FullName</span>
                                }
                                else
                                {
                                    <a asp-controller="Auth" asp-action="Login"><i class="fa fa-user"></i> Login</a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Header Top End -->
    <!-- Logo + Menu + Cart Begin -->
    <div class="container">
        <div class="row">
            <!-- Logo -->
            <div class="col-lg-3 col-md-3 col-sm-6">
                <div class="header__logo d-flex justify-content-center align-items-center" style="height: 100px;">
                    <a href="/">
                        <img src="~/img/logo.png?v2" alt="HelloWorld Logo" style="width:100px; height:auto; border-radius:5px;">
                    </a>
                </div>
            </div>

            <!-- Menü -->   @* gerçek MVC actionlarıyla eşleşmez/bizimkine göre değişecek *@
            <div class="col-lg-6 col-md-6 col-sm-6">
                <nav class="header__menu">
                    <ul>
                        <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li><a asp-controller="Home" asp-action="Listing">Shop</a></li>
                        <li class="has-dropdown">
                            <a href="#">Pages</a>
                            <ul class="header__menu__dropdown">
                                @* <li><a asp-controller="Home" asp-action="ProductDetail">Shop Details</a></li> *@
                                <li><a asp-controller="Cart" asp-action="Index">Shopping Cart</a></li>
                                <li><a asp-controller="Favorites" asp-action="Index">Favorites</a></li>
                               @*  <li><a asp-controller="Blog" asp-action="Details">Blog Details</a></li> *@  @* şimdilik boş ilerde eklenir *@
                            </ul>
                        </li>
                        <li><a asp-controller="Home" asp-action="AboutUs">About Us</a></li>
                        <li><a asp-controller="Home" asp-action="Contact">Contact</a></li>
                        @if (isLoggedIn)
                        {
                            <li><a asp-controller="Profile" asp-action="Details">Profile</a></li>
                        }
                    </ul>
                </nav>
            </div>

            <!-- Sepet ve Favori -->
            <div class="col-lg-3 col-md-3 col-sm-6">
                <div class="header__cart">
                    <ul>
                        @* <li><a href="/Wishlist"><i class="fa fa-heart"></i> <span>1</span></a></li> *@
                        <li>
                            <a asp-controller="Favorites" asp-action="Index" id="header-favorites-link">
                                <i class="fa fa-heart"></i>
                                <span id="header-favorites-count">@(ViewBag.FavoritesCount ?? 0)</span>
                            </a>
                        </li>
                       @*  <li><a href="/Cart"><i class="fa fa-shopping-bag"></i> <span>3</span></a></li> *@
                        <li>
                            <a asp-controller="Cart" asp-action="Index">
                                <i class="fa fa-shopping-bag"></i>
                                <span>@(ViewBag.CartCount ?? 0)</span>
                            </a>
                        </li>
                    </ul>
                    <div class="header__cart__price">
                        item: <span>@ViewBag.CartTotal ₺</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Hamburger Menü (mobil için) //BU TAM OLARAK NERESİ EMİN OLAMADIM-KONTROL EDİLECEK!//-->
        <div class="humberger__open">     @* Hamburger menü JS kısmı Ogani’de özel script ister *@
            <i class="fa fa-bars"></i>     @* Kod doğru ama çalışması için Index.cshtml içine eklemek gerekir: *@
        </div>
    </div>
    <!-- Logo + Menu + Cart End -->
</header>
<!-- Header Section End -->

    <style>

    .header__menu ul {
        display: flex; /* Menü öğelerini yan yana hizalar */
        gap: 10px;
    }

        .header__menu li a {
    position: relative;
    z-index: 2; /* üstte görünmesini sağlar */
}
/* Dropdown menü arka plan ve link renkleri */
.header__menu .header__menu__dropdown {
    background-color: #fff !important; /* Arka plan beyaz */
    border: 1px solid #eee !important; /* Hafif çerçeve */
}

        .header__menu .header__menu__dropdown li a {
            color: #333 !important;
            padding: 10px 20px !important;
            display: block !important;
            transition: all 0.3s !important;
            background-color: #a4c639 !important;
            min-width: 150px; /* tüm kutular aynı genişlikte */
            box-sizing: border-box;
        }

/* Hover rengi */
.header__menu .header__menu__dropdown li a:hover {
    background-color: #f4f4f4 !important; /* Açık gri */
    color: #27ae60 !important; /* Tema yeşili */
}
    </style>
