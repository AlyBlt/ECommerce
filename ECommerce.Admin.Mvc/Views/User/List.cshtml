@model IEnumerable<ECommerce.Admin.Mvc.Models.User.UserViewModel>

@{
    ViewData["Title"] = "User List";
   
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">All Users</h6>
    </div>
    <div class="card-body">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["ErrorMessage"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }

        <div class="table-responsive">
            <table class="table table-bordered table-hover" width="100%" cellspacing="0">
                <thead class="thead-light">
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Seller Approved</th>
                        <th>Seller Approvement Actions</th>
                        <th>Status Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.Id</td>
                            <td>@user.FirstName @user.LastName</td>
                            <td>@user.Email</td>
                            <td>
                                @if (user.IsSellerApproved)
                                {
                                    <span class="badge badge-success">Approved</span>
                                }
                                else if (user.HasPendingSellerRequest)
                                {
                                    <span class="badge badge-warning">Pending</span>
                                }
                                else if (user.IsRejected)
                                {
                                    <span class="badge badge-danger">Rejected</span>
                                }
                                else
                                {
                                    <span class="badge badge-secondary">No Request</span>
                                }
                            </td>
                            <td>
                                @* Seller actions *@
                                @if (!user.IsSellerApproved && user.HasPendingSellerRequest)
                                {
                                    <div class="d-flex" role="group">
                                        <a asp-action="ApproveForm" asp-route-id="@user.Id"
                                           class="btn btn-success btn-sm shadow-sm mr-2"
                                           title="Approve Seller Request">
                                            <i class="fas fa-check"></i>
                                        </a>

                                        <a asp-action="RejectForm" asp-route-id="@user.Id"
                                           class="btn btn-danger btn-sm shadow-sm"
                                           title="Reject Seller Request">
                                            <i class="fas fa-times"></i> 
                                        </a>
                                    </div>
                                }
                                else
                                {
                                    <span class="text-secondary">No action</span>
                                }
                            </td>
                            @* Toggle Enabled *@
                            <td class="d-flex">
                                @if (user.RoleName == "SystemAdmin")
                                {
                                    @* SystemAdmin için butonu kilitliyoruz veya sadece bir bilgi simgesi koyuyoruz *@
                                    <span class="badge badge-secondary" title="System Administrator account is protected.">
                                        <i class="fas fa-shield-alt"></i> Protected
                                    </span>
                                }
                                else
                                {
                                    @if (user.Enabled)
                                    {
                                        @* Aktif kullanıcıyı deaktive etme (Sarı/Turuncu - Durdurma simgesi) *@
                                        <a asp-action="ToggleEnabled" asp-route-id="@user.Id"
                                           class="btn btn-warning btn-sm shadow-sm text-white"
                                           title="Deactivate User">
                                            <i class="fas fa-user-minus"></i>
                                        </a>
                                    }
                                    else
                                    {
                                        @* Pasif kullanıcıyı aktive etme (Mavi/Turkuaz - Artı simgesi) *@
                                        <a asp-action="ToggleEnabled" asp-route-id="@user.Id"
                                           class="btn btn-info btn-sm shadow-sm"
                                           title="Activate User">
                                            <i class="fas fa-user-plus"></i>
                                        </a>
                                    }
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>