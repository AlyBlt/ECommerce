@model IEnumerable<ECommerce.Admin.Mvc.Models.User.UserViewModel>

@{
    ViewData["Title"] = "User List";
   
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">User List</h6>
    </div>
    <div class="card-body">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["ErrorMessage"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }

        <div class="table-responsive">
            <table class="table table-bordered" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Seller Approved</th>
                        <th>Seller Approvement Actions</th>
                        <th>Status Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.Id</td>
                            <td>@user.FirstName @user.LastName</td>
                            <td>@user.Email</td>
                            <td>
                                @if (user.IsSellerApproved)
                                {
                                    <span class="badge badge-success">Approved</span>
                                }
                                else if (user.HasPendingSellerRequest)
                                {
                                    <span class="badge badge-warning">Pending</span>
                                }
                                else if (user.IsRejected)
                                {
                                    <span class="badge badge-danger">Rejected</span>
                                }
                                else
                                {
                                    <span class="badge badge-secondary">No Request</span>
                                }
                            </td>
                            <td>
                                @* Seller actions *@
                                @if (!user.IsSellerApproved && user.HasPendingSellerRequest)
                                {
                                    <div class="d-flex">
                                        <!-- Approve butonu -->
                                        <a asp-action="ApproveForm" asp-route-id="@user.Id" class="btn btn-success btn-sm mr-2">
                                            <i class="fas fa-check"></i> Approve
                                        </a>

                                        <!-- Reject butonu -->
                                        <a asp-action="RejectForm" asp-route-id="@user.Id" class="btn btn-danger btn-sm">
                                            <i class="fas fa-check"></i> Reject
                                        </a>
                                    </div>
                                }
                                else
                                {
                                    <span class="text-secondary">No action</span>
                                }
                            </td>
                            @* Toggle Enabled *@
                            <td class="d-flex">
                                @if (user.Enabled)
                                {
                                    <a asp-action="ToggleEnabled" asp-route-id="@user.Id" class="btn btn-warning btn-sm">
                                        <i class="fas fa-user-slash"></i> Deactivate
                                    </a>
                                }
                                else
                                {
                                    <a asp-action="ToggleEnabled" asp-route-id="@user.Id" class="btn btn-success btn-sm">
                                        <i class="fas fa-user-check"></i> Activate
                                    </a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>