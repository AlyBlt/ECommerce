@model IEnumerable<ECommerce.Admin.Mvc.Models.Comment.CommentViewModel>
@{
    ViewData["Title"] = "Comment List";
 }


<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">All Comments</h6>
    </div>

    <div class="card-body">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["ErrorMessage"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }

        <div class="table-responsive">
            <table class="table table-bordered table-hover" width="100%" cellspacing="0">
                <thead class="thead-light">
                    <tr>
                        <th>ID</th>
                        <th>User</th>
                        <th>Product</th>
                        <th>Comment</th>
                        <th>Rating</th>
                        <th>Approved</th>
                        <th style="width:150px;">Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.UserName</td>
                            <td>@item.ProductName</td>
                            <td>
                                @* Uzun yorumları kontrol altında tutmak için bir sınırlama *@
                                <span title="@item.Text">
                                    @(item.Text.Length > 50 ? item.Text.Substring(0, 50) + "..." : item.Text)
                                </span>
                            </td>
                            <td class="text-nowrap">
                                @* Rating yanına sarı bir yıldız *@
                                <span class="badge badge-light border">
                                    <i class="fas fa-star text-warning mr-1"></i> @item.Rating
                                </span>
                            </td>
                            <td>
                                @if (item.IsApproved)
                                {
                                    <span class="badge badge-success"><i class="fas fa-check-circle mr-1"></i> Approved</span>
                                }
                                else if (item.IsRejected)
                                {
                                    <span class="badge badge-danger"><i class="fas fa-times-circle mr-1"></i> Rejected</span>
                                }
                                else
                                {
                                    <span class="badge badge-warning"><i class="fas fa-clock mr-1"></i> Pending</span>
                                }
                            </td>
                            <td>
                                <div class="d-flex align-items-center">
                                @if (!item.IsApproved && !item.IsRejected)
                                {
                                        @* Onay Butonu *@
                                        <a asp-controller="ProductComment" asp-action="ApproveForm" asp-route-id="@item.Id"
                                           class="btn btn-success btn-sm shadow-sm mr-2"
                                           title="Approve Comment">
                                            <i class="fas fa-check"></i>
                                        </a>

                                        @* Reddet Butonu *@
                                        <a asp-controller="ProductComment" asp-action="RejectForm" asp-route-id="@item.Id"
                                           class="btn btn-danger btn-sm shadow-sm"
                                           title="Reject Comment">
                                            <i class="fas fa-times"></i>
                                        </a>
                                  }
                                else
                                {
                                        <small class="text-muted font-italic">Processed</small>
                                }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
</div>