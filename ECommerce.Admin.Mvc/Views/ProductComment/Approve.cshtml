@model ECommerce.Admin.Mvc.Models.Comment.CommentViewModel  

@{
    ViewData["Title"] = "Approve Comment";
    
}

<h1 class="h3 mb-4 text-gray-800">Approve Comment</h1>

<div class="card shadow mb-4">
    <div class="card-body">

        <h5 class="text-primary mb-3">Comment Detail</h5>

        <p><strong>User:</strong> @(Model.UserName ?? "Unknown")</p>
        <p><strong>Product:</strong> @(Model.ProductName ?? "Unknown")</p>
        <p><strong>Rating:</strong> @Model.Rating</p>
        <p><strong>Comment:</strong> @Model.Text</p>

        <!-- Yorum Onaylama Formu -->
        <form asp-action="ApproveComment" asp-route-id="@Model.Id" method="post">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-success">Approve Comment</button>

            <a asp-action="List" class="btn btn-secondary ml-2">
                Cancel
            </a>

        </form>

    </div>
</div>