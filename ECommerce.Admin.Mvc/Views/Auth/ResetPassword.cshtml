@model ECommerce.Admin.Mvc.Models.Auth.ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset Password";
    Layout = "_AuthLayout";
}

<div class="p-4">
    <div class="text-center">
        <h1 class="h4 text-gray-900 mb-2">Create New Password</h1>
        <p class="mb-4 text-muted">Please enter your new password below to regain access to the admin panel.</p>
    </div>

    @if (!ViewData.ModelState.IsValid)
    {
        <div asp-validation-summary="ModelOnly" class="alert alert-danger small"></div>
    }

    <form asp-action="ResetPassword" method="post" class="user">
        @* Token bilgisini modele geri göndermek için saklıyoruz *@
        <input type="hidden" asp-for="Token" />

        <div class="form-group">
            <label asp-for="Password" class="small mb-1">New Password</label>
            <input asp-for="Password" type="password"
                   class="form-control form-control-user"
                   placeholder="Enter New Password..." required />
            <span asp-validation-for="Password" class="text-danger small pl-3"></span>
        </div>

        <div class="form-group">
            <label asp-for="ConfirmPassword" class="small mb-1">Confirm New Password</label>
            <input asp-for="ConfirmPassword" type="password"
                   class="form-control form-control-user"
                   placeholder="Repeat New Password..." required />
            <span asp-validation-for="ConfirmPassword" class="text-danger small pl-3"></span>
        </div>

        <button type="submit" class="btn btn-primary btn-user btn-block mt-4">
            <i class="fas fa-key fa-sm fa-fw mr-2"></i> Update Password
        </button>
    </form>

    <hr>

    <div class="text-center">
        <a class="small" asp-action="Login">Remembered your password? Login!</a>
    </div>
</div>