@model ECommerce.Admin.Mvc.Models.Auth.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "_AuthLayout";
}

<div class="row justify-content-center">
    <!-- Sadece 1 kolon, genişlik arttırıldı -->
    <div class="col-12 col-sm-10 col-md-8 col-lg-8 col-xl-6">
        <div class="card shadow-lg mt-1 mb-1 ">
            <!-- Başlık kaldırıldı, zaten _AuthLayout'ta var -->
            <div class="card-body">
                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger">@TempData["Error"]</div>
                }
                 @if (ViewBag.PassiveMessage != null)
                {
                  <div class="alert alert-danger">
                       @ViewBag.PassiveMessage
                  </div>
                }
              
                <form method="post">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <!-- Form Group: Email -->
                    <div class="form-group">
                        <label for="Email">Email</label>
                        <input type="email" id="Email" name="Email" class="form-control" required />
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>

                    <!-- Form Group: Password -->
                    <div class="form-group">
                        <label for="Password">Password</label>
                        <input type="password" id="Password" name="Password" class="form-control" required />
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>

                    <!-- Submit Button -->
                    <button type="submit" class="btn btn-primary btn-block mt-3">Login</button>
                </form>
                
                <div class="text-center mb-3">
                    <a asp-action="ForgotPassword" asp-controller="Auth" class="small">Forgot password?</a>
                </div>
            </div>
        </div>
    </div>
</div>