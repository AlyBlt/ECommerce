@model IEnumerable<ECommerce.Admin.Mvc.Models.Category.CategoryListViewModel>

@{
    ViewData["Title"] = "Category List";
  
}


<!-- Success / Error mesajları -->
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">All Categories</h6>

        <a asp-action="Create" class="btn btn-primary btn-sm">
            <i class="fas fa-plus"></i> Create New
        </a>
    </div>

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-hover" width="100%" cellspacing="0">
                <thead class="thead-light">
                    <tr>
                        <th>ID</th>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Color</th>
                        <th>Icon</th>
                        <th style="width: 180px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td style="width: 80px; text-align: center;">
                                <my-img file-name="@item.ImageUrl"
                                        class="img-profile rounded-circle"
                                        style="width: 40px; height: 40px; object-fit: cover; border: 1px solid #e3e6f0;" />
                            </td>
                            <td>@item.Name</td>
                            <td>
                                <div class="d-flex align-items-center">
                                    @{
                                        // Renk kodunun başında # yoksa ekliyoruz (Örn: FF0000 -> #FF0000)
                                        var safeColor = item.Color?.StartsWith("#") == true ? item.Color : "#" + item.Color;
                                    }
                                    @* Yuvarlak Renk Kutusu *@
                                    <span style="display:inline-block; width:24px; height:24px; background-color:@safeColor; border-radius:50%; border:2px solid #fff; shadow: 0 0 5px rgba(0,0,0,0.2); margin-right:10px;"></span>

                                    @* Renk Kodu Yazısı (Kırmızı kalmaması için rengi siyah yapıyoruz) *@
                                    <span class="text-dark font-weight-bold">@item.Color</span>
                                </div>
                            </td>
                            <td>
                                <div class="d-flex align-items-center">
                                    @* İkon: fa-fw sınıfı genişliği sabitler, daha düzgün durur *@
                                    <i class="@item.IconCssClass fa-fw fa-lg mr-2 text-primary"></i>
                                    <span class="text-muted small">@item.IconCssClass</span>
                                </div>
                            </td> 
                            <td>
                                @* Edit / Delete butonların *@
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm shadow-sm" title="Edit Category">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm shadow-sm" title="Delete Category">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>