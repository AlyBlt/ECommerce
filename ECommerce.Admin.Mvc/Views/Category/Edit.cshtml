@model ECommerce.Admin.Mvc.Models.Category.CategoryCreateEditViewModel

@{
    ViewData["Title"] = "Edit Category";
   
}

<h1 class="h3 mb-4 text-gray-800">Edit Category</h1>

<div class="card shadow mb-4">
    <div class="card-body">

        <form asp-action="Edit" asp-route-id="@Model.Id" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Name" class="font-weight-bold"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Color" class="font-weight-bold"></label>
                <input asp-for="Color" class="form-control" type="text" placeholder="#ff9900" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IconCssClass" class="font-weight-bold"></label>
                <input asp-for="IconCssClass" class="form-control" placeholder="fa fa-home" />
                <span asp-validation-for="IconCssClass" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary mt-2">Update</button>
            <a class="btn btn-secondary mt-2" asp-action="List">Cancel</a>
        </form>

    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}