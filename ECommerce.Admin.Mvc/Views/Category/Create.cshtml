@model ECommerce.Admin.Mvc.Models.Category.CategoryCreateEditViewModel

@{
    ViewData["Title"] = "Create Category";
    Layout = "_SbAdminLayout";
}

<h1 class="h3 mb-4 text-gray-800">@ViewData["Title"]</h1>

<div class="card shadow mb-4">
    <div class="card-body">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="font-weight-bold"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Color" class="font-weight-bold"></label>
                <input asp-for="Color" class="form-control" type="text" placeholder="#abc123" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IconCssClass" class="font-weight-bold"></label>
                <input asp-for="IconCssClass" class="form-control" />
                <span asp-validation-for="IconCssClass" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary mt-2">Create</button>
            <a class="btn btn-secondary mt-2" asp-action="List">Cancel</a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}