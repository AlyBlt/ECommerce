@model ECommerce.Admin.Mvc.Models.Category.CategoryCreateEditViewModel

@{
    ViewData["Title"] = "Create Category";
    Layout = "_SbAdminLayout";
}

<h1 class="h3 mb-4 text-gray-800">@ViewData["Title"]</h1>

<div class="card shadow mb-4">
    <div class="card-body">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="font-weight-bold"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Color" class="font-weight-bold"></label>
                <input asp-for="Color" class="form-control" type="text" placeholder="#abc123" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IconCssClass" class="font-weight-bold"></label>
                <input asp-for="IconCssClass" class="form-control" />
                <span asp-validation-for="IconCssClass" class="text-danger"></span>
            </div>
      <div>
            @* 2. RESİM YÜKLEME VE ÖNİZLEME ALANI *@
            <div class="col-md-4">
                <div class="form-group text-center">
                    <label class="font-weight-bold d-block">Category Image</label>
                    <div class="mb-3">
                        @* TagHelper kullanımı *@
                        <my-img file-name="@Model?.ImageUrl"
                                id="categoryPreview"
                                class="img-thumbnail shadow-sm"
                                style="width: 200px; height: 200px; object-fit: cover;" />
                    </div>
                    <div class="custom-file text-left">
                        <input type="file" asp-for="ImageFile" class="custom-file-input" id="customFile" accept="image/*">
                        <label class="custom-file-label" for="customFile">Choose file...</label>
                    </div>
                    <span asp-validation-for="ImageFile" class="text-danger small"></span>
                </div>
            </div>
      </div>
            <hr />
            <button type="submit" class="btn btn-primary mt-2"><i class="fas fa-save"></i>Create</button>
            <a class="btn btn-secondary mt-2" asp-action="List">Cancel</a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Dosya seçildiğinde çalışan önizleme scripti
        document.getElementById('customFile').addEventListener('change', function (e) {
            if (e.target.files.length > 0) {
                var file = e.target.files[0];

                // Label güncelle
                var label = e.target.nextElementSibling;
                label.innerText = file.name;

                // Önizleme Yap (FileReader)
                var reader = new FileReader();
                reader.onload = function(event) {
                    document.getElementById('categoryPreview').src = event.target.result;
                };
                reader.readAsDataURL(file);
            }
        });
    </script>
}