@model IEnumerable<ECommerce.Admin.Mvc.Models.Product.ProductListViewModel>

@{
    ViewData["Title"] = "Product List";
   
}

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">All Products</h6>
    </div>

    <div class="card-body">

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["Success"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["Error"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }

        <div class="table-responsive">
            <table class="table table-bordered table-hover" width="100%" cellspacing="0">
                <thead class="thead-light">
                    <tr>
                        <th>ID</th>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Category</th>
                        <th>Seller</th>
                        <th>Price</th>
                        <th>Enabled</th>
                        <th style="width: 200px;">Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td>@product.Id</td>
                            <td>
                               @* Burada ürünün resmi varsa onu, yoksa DefaultProduct'ı basıyoruz. *@
                                <my-img file-name="@product.MainImageUrl"
                                        class="img-thumbnail"
                                        style="width: 50px; height: 50px; object-fit: cover;" />
                            </td>
                            <td>@product.Name</td>
                            <td>@product.CategoryName</td>
                            <td>
                                <span class="text-primary"><i class="fas fa-store mr-1"></i> @product.SellerName</span> 
                            </td>
                            <td>@product.Price.ToString("C2", new System.Globalization.CultureInfo("en-US"))</td>

                            <td>
                                @if (product.Enabled)
                                {
                                    <span class="badge badge-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge badge-secondary">Disabled</span>
                                }
                            </td>

                            <td>
                                <div class="d-flex">
                                    @* 1. Status Toggle (Enable/Disable) *@
                                    <form asp-action="ToggleStatus" method="post" class="d-inline">
                                        <input type="hidden" name="id" value="@product.Id" />
                                        <button type="submit"
                                                class="btn @(product.Enabled ? "btn-warning" : "btn-info") btn-sm shadow-sm mr-2"
                                                title="@(product.Enabled ? "Disable Product" : "Enable Product")">
                                            <i class="fas @(product.Enabled ? "fa-eye-slash" : "fa-eye")"></i>
                                        </button>
                                    </form>

                                    @* 2. Delete Action *@
                                    <a asp-action="Delete" asp-route-id="@product.Id"
                                       class="btn btn-danger btn-sm shadow-sm"
                                       title="Delete Product"
                                       onclick="return confirm('Are you sure you want to delete this product?')">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
</div>