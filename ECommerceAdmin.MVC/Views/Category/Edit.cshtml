@{
    ViewData["Title"] = "Kategori Düzenle";
    var id = ViewBag.Id;
}

<h1 class="mb-4">Kategori Düzenle</h1>

<p class="text-muted">Düzenlenen kategori Id: <strong>@id</strong></p>

<form asp-action="Edit" method="post" class="row g-3">
    <input type="hidden" name="Id" value="@id" />

    <div class="col-md-6">
        <label class="form-label">Kategori Adı</label>
        <input type="text" name="Name" class="form-control" value="Örnek Kategori" />
    </div>
    <div class="col-md-6">
        <label class="form-label">Aktif mi?</label>
        <select name="IsActive" class="form-select">
            <option value="true" selected>Evet</option>
            <option value="false">Hayır</option>
        </select>
    </div>

    <div class="col-12">
        <label class="form-label">Açıklama</label>
        <textarea name="Description" class="form-control" rows="3">Örnek açıklama metni...</textarea>
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-primary">Güncelle</button>
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary ms-2">İptal</a>
    </div>
</form>
