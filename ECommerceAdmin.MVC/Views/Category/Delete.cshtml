@{
    ViewData["Title"] = "Kategori Sil";
    var id = ViewBag.Id;
}

<h1 class="mb-4 text-danger">Kategori Sil</h1>

<div class="alert alert-warning">
    <p><strong>Uyarı!</strong> Bu işlem geri alınamaz.</p>
    <p>Silinecek kategori Id: <strong>@id</strong></p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" name="Id" value="@id" />
    <button type="submit" class="btn btn-danger">Evet, Sil</button>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary ms-2">Vazgeç</a>
</form>
