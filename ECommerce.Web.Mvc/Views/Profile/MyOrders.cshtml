@model List<ECommerce.Web.Mvc.Models.Order.OrderSummaryViewModel>

@{
    ViewData["Title"] = "My Orders";
    var user = ViewBag.User as ECommerce.Web.Mvc.Models.User.UserInformationViewModel;
}
<section class="checkout profile-section">
    <div class="container">
        <div class="row">

            <!-- LEFT MENU -->
            <div class="col-lg-4 col-md-4">
                <div class="checkout__order profile-sidebar">
                    <h4>Account Menu</h4>
                    <ul class="list-group list-group-flush profile-menu">
                        <li class="list-group-item"><a href="/profile/details">My Profile</a></li>
                        <li class="list-group-item"><a href="/profile/edit">Edit Profile</a></li>
                        @* Buyer veya Seller için My Orders *@
                        @if (User.IsInRole("Buyer") || User.IsInRole("Seller"))
                        {
                            <li class="list-group-item"><a href="/profile/my-orders">My Orders</a></li>
                        }
                        @* Sadece Seller için My Products *@
                        @if (User.IsInRole("Seller"))
                        {
                            <li class="list-group-item"><a href="/profile/my-products">My Products</a></li>
                        }
                        @* Sadece Buyer için Request Seller Role *@
                        @if (User.IsInRole("Buyer"))
                        {
                            <li class="list-group-item"><a href="/profile/request-seller">Request Seller Role</a></li>
                        }
                    </ul>
                </div>
            </div>

            <!-- RIGHT CONTENT -->
            <div class="col-lg-8 col-md-8">
                <div class="checkout__form profile-content">

                    <h4 class="mb-4">My Orders</h4>

                    @if (ViewBag.Empty == true)
                    {
                        <div class="alert alert-info" role="alert">
                            No orders found.
                        </div>
                    }
                    else
                    {
                        @foreach (var order in Model)
                        {
                            <div class="card mb-3">
                                <div class="card-body">
                                    <h5>Order #@order.Id</h5>
                                    <p><strong>Payment Method:</strong> @order.PaymentMethod</p>

                                    <table class="table table-bordered mb-2">
                                        <thead>
                                            <tr>
                                                <th>Product</th>
                                                <th>Price</th>
                                                <th>Qty</th>
                                                <th>Total</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in order.Items)
                                            {
                                                <tr>
                                                    <td>@item.ProductName</td>
                                                    <td>@item.UnitPrice.ToString("C2", new System.Globalization.CultureInfo("en-US"))</td>
                                                    <td>@item.Quantity</td>
                                                    <td>@item.TotalPrice.ToString("C2", new System.Globalization.CultureInfo("en-US"))</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                    <p class="text-right"><strong>Total:</strong> @order.TotalAmount.ToString("C2", new System.Globalization.CultureInfo("en-US"))</p>
                                </div>
                            </div>
                        }
                    }

                </div>
            </div>

        </div>
    </div>
</section>

<style>
    .profile-section {
        padding-top: 30px !important;
        padding-bottom: 60px;
    }

    .profile-sidebar {
        margin-top: 0;
    }

    .profile-content {
        margin-top: 0;
    }

    .profile-menu li {
       /*  padding: 12px 0; */
        font-size: 15px;
    }

        .profile-menu li a {
            color: #111;
            text-decoration: none;
        }

            .profile-menu li a:hover {
                color: #7fad39;
            }
</style>