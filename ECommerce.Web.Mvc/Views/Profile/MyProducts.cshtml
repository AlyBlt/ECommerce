@model List<ECommerce.Web.Mvc.Models.Home.ProductListingViewModel>
@{
    ViewData["Title"] = "My Products";
    var user = ViewBag.User as ECommerce.Web.Mvc.Models.User.UserInformationViewModel;
}
<section class="checkout profile-section">
    <div class="container">
        <div class="row">
            <!-- LEFT MENU -->
            <div class="col-lg-4 col-md-4">
                <div class="checkout__order profile-sidebar">
                    <h4>Account Menu</h4>
                    <ul class="list-group list-group-flush profile-menu">
                        <li class="list-group-item"><a href="/profile/details">My Profile</a></li>
                        <li class="list-group-item"><a href="/profile/edit">Edit Profile</a></li>
                        @* Buyer veya Seller için My Orders *@
                        @if (User.IsInRole("Buyer") || User.IsInRole("Seller"))
                        {
                            <li class="list-group-item"><a href="/profile/my-orders">My Orders</a></li>
                        }
                        @* Sadece Seller için My Products *@
                        @if (User.IsInRole("Seller"))
                        {
                            <li class="list-group-item"><a href="/profile/my-products">My Products</a></li>
                        }
                        @* Sadece Buyer için Request Seller Role *@
                        @if (User.IsInRole("Buyer"))
                        {
                            <li class="list-group-item"><a href="/profile/request-seller">Request Seller Role</a></li>
                        }
                    </ul>
                </div>
            </div>

            <!-- RIGHT CONTENT -->
            <div class="col-lg-8 col-md-8">
                <div class="checkout__form profile-content">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["Error"]
                            <button type="button" class="close" data-dismiss="alert">
                                <span>&times;</span>
                            </button>
                        </div>
                    }
                    <h4 class="mb-4">My Products</h4>

                    <!-- ADD NEW PRODUCT BUTONU -->
                   
                        <div class="mb-3">
                            <a asp-controller="Product" asp-action="Create" class="btn btn-success">Add New Product</a>
                        </div>
                  
                    @if (!Model.Any())
                    {
                        <div class="alert alert-info">No products found.</div>
                    }
                    else
                    {
                        <div class="row">
                            @foreach (var item in Model)
                            {
                                <div class="col-lg-12 mb-4">
                                    <div class="product-card">
                                        <!-- Product Image -->
                                        <div class="product-image" style="background-image: url('@Url.Content(item.ImageUrl)');">
                                        </div>

                                        <!-- Product Info -->
                                        <div class="product-info mt-2">
                                            <h5>@item.Name</h5>
                                            <p class="category">Category: <strong>@item.Category</strong></p>
                                            <p class="price">
                                                @item.Price.ToString("C2", new System.Globalization.CultureInfo("en-US"))
                                                @if (item.IsOnSale && item.OldPrice.HasValue)
                                                {
                                                    <del>@item.OldPrice.Value.ToString("C2", new System.Globalization.CultureInfo("en-US"))</del>
                                                }
                                            </p>

                                           
                                        </div>

                                        <!-- Seller Actions -->
                                        <div class="product-actions mt-2">
                                            <!-- Edit Link -->
                                            <a asp-controller="Product" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Edit</a>

                                            <!-- Delete Button -->
                                            <form asp-controller="Product" asp-action="Delete" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this product?');">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@item.Id" />
                                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                            </form>

                                            <!-- Toggle Status Button -->
                                            <form asp-controller="Product" asp-action="ToggleStatus" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@item.Id" />
                                                <button type="submit" class="btn btn-sm btn-warning">
                                                    @(item.Enabled ? "Disable" : "Enable")
                                                </button>
                                            </form>

                                           
                                        </div>

                                        <!-- Comments -->
                                        @if (item.Comments != null && item.Comments.Any())
                                        {
                                            <div class="comments mt-3">
                                                <h6 class="comment-title">Comments</h6>
                                                @foreach (var c in item.Comments)
                                                {
                                                    <div class="comment-box">
                                                        <div class="comment-header">
                                                            <strong>@c.UserName</strong>
                                                            <span class="rating">
                                                                @for (int i = 1; i <= c.Rating; i++)
                                                                {
                                                                    <span class="star">★</span>
                                                                }
                                                                @for (int i = 1; i <= (5 - c.Rating); i++)
                                                                {
                                                                    <span class="star empty">★</span>
                                                                }
                                                            </span>
                                                            @if (!c.IsApproved)
                                                            {
                                                                <span class="badge badge-warning">Pending Approval</span>
                                                            }
                                                        </div>
                                                        <p class="comment-text">@c.Text</p>
                                                    </div>
                                                }
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="no-comments mt-2">
                                                <em>No comments for this product.</em>
                                            </div>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>





<style>
    .profile-section {
        padding-top: 30px !important;
        padding-bottom: 60px;
    }

    .profile-sidebar, .profile-content {
        margin-top: 0;
    }

    .profile-menu li a {
        color: #111;
        text-decoration: none;
    }

        .profile-menu li a:hover {
            color: #7fad39;
        }

        .profile-menu li a.active {
            color: #111;
            font-weight: bold;
        }

    /* --- PRODUCT CARD --- */
    .product-card {
        background: #f8f8f8;
        border: 1px solid #ebebeb;
        border-radius: 5px;
        padding: 15px;
    }

    .product-image {
        width: 100%;
        height: 220px;
        background-size: cover;
        background-position: center;
        border-radius: 5px;
    }

    .price {
        font-size: 18px;
        font-weight: 600;
        margin-bottom: 5px;
    }

    .old-price {
        color: #e74c3c;
        margin-left: 5px;
    }

    .category {
        font-size: 14px;
        color: #777;
    }

    /* --- COMMENTS --- */
    .comments {
        background: #fff;
        border: 1px solid #ddd;
        padding: 15px;
        border-radius: 5px;
    }

    .comment-title {
        border-bottom: 1px solid #ddd;
        padding-bottom: 5px;
        margin-bottom: 10px;
    }

    .comment-box {
        padding: 8px 0;
        border-bottom: 1px solid #eee;
    }

        .comment-box:last-child {
            border-bottom: none;
        }

    .comment-header {
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .rating .star {
        color: gold;
        font-size: 14px;
    }

        .rating .star.empty {
            color: #ccc;
        }

    .comment-text {
        font-size: 14px;
        margin-top: 5px;
    }

    .badge-warning {
        background: #f6c23e;
        padding: 4px 8px;
        font-size: 12px;
        border-radius: 4px;
    }

    .no-comments {
        font-size: 13px;
        color: #666;
    }
</style>