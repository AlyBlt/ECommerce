@model ECommerce.Web.Mvc.Models.Cart.CartViewModel
@{
    ViewData["Title"] = "My Cart";
    var isAdmin = User.IsInRole("Admin");
    var isAuthenticated = User.Identity?.IsAuthenticated ?? false;
    var isBuyerOrSeller = User.IsInRole("Buyer") || User.IsInRole("Seller");
}
@if (isAdmin)
{
    <div class="alert alert-danger">
        You are not authorized to view or modify the cart. Please proceed to the admin dashboard.
    </div>
}
else
{

<section class="shoping-cart spad">
    <div class="container">

        <h2 class="mb-4">My Cart</h2>

        <!-- Success Message -->
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["Success"]
                <button type="button" class="close" data-dismiss="alert">
                    <span>&times;</span>
                </button>
            </div>
        }

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["Error"]
                    <button type="button" class="close" data-dismiss="alert">
                        <span>&times;</span>
                    </button>
                </div>
            }


            <!-- Clear Cart Button -->
        <form asp-controller="Cart" asp-action="Clear" method="post" class="mb-4">
            <button type="submit" class="primary-btn">Clear Cart</button>
        </form>
        @if (Model.Items.Any())
        {
            <div class="shoping__cart__table">
                <table>
                    <thead>
                        <tr>
                            <th class="shoping__product">Product</th>
                            <th>Price</th>
                            <th>Quantity</th>
                            <th>Total</th>
                            <th>Action</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            <tr>
                                <td class="shoping__cart__item d-flex align-items-center">
                                    <img src="@(!string.IsNullOrEmpty(item.ImageUrl) ? Url.Content(item.ImageUrl) : Url.Content("~/img/product/default.jpg"))"
                                         alt="@item.Name"
                                         class="me-3"
                                         style="width:70px; height:70px; object-fit:cover;" />
                                    <h5 class="m-0">@item.Name</h5>
                                </td>

                                <td class="shoping__cart__price">
                                    $ @item.Price.ToString("0.00", System.Globalization.CultureInfo.InvariantCulture)
                                </td>

                                <td class="shoping__cart__quantity">
                                    <form asp-controller="Cart" asp-action="Edit" method="post" class="d-flex">
                                            @Html.AntiForgeryToken()
                                        <input type="hidden" name="productId" value="@item.ProductId" />
                                        <input type="number" name="quantity" value="@item.Quantity"
                                               class="form-control" style="width:80px;" min="1" />

                                        <button type="submit" class="btn btn-warning btn-sm ms-2">Update</button>
                                    </form>
                                </td>

                                <td class="shoping__cart__total">$ @item.TotalPrice.ToString("0.00", System.Globalization.CultureInfo.InvariantCulture)</td>

                                <td class="shoping__cart__item__close">
                                    <form asp-controller="Cart" asp-action="Edit" method="post">
                                            @Html.AntiForgeryToken()
                                        <input type="hidden" name="productId" value="@item.ProductId" />
                                        <input type="hidden" name="quantity" value="0" />
                                        <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                                    </form>
                                </td>
                            </tr>
                        }

                        <tr>
                            <td colspan="3" class="shoping__cart__total"><strong>Total</strong></td>
                            <td class="shoping__cart__total"><strong>@Model.TotalPrice.ToString("0.00", System.Globalization.CultureInfo.InvariantCulture) $</strong></td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <!-- BUTONLAR (Back + Continue Shopping + Checkout) -->
            <div class="shoping__cart__btns mt-4 d-flex justify-content-between">

                <!-- BACK TO HOME -->
                <a href="@Url.Action("Index", "Home")" class="primary-btn">
                    ← Back to Home
                </a>

                <!-- CONTINUE SHOPPING -->
                <a href="@Url.Action("Listing", "Home")" class="primary-btn">
                    Continue Shopping
                </a>

                <!-- PROCEED TO CHECKOUT -->
                <a href="@Url.Action("Create", "Order")" class="primary-btn cart-btn-right">
                    Proceed to Checkout →
                </a>

            </div>

        }
        else
        {
            <p class="text-muted">Your cart is empty.</p>

            <!-- Sepet boşsa geri dön butonu -->
            <a href="@Url.Action("Index", "Home")" class="primary-btn mt-3">
                ← Back to Home
            </a>
        }

    </div>
</section>
}

