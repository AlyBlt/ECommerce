@model ECommerce.Web.Mvc.Models.Cart.CartViewModel
@{
    ViewData["Title"] = "My Cart";
    var isAdmin = User.IsInRole("Admin") || User.IsInRole("SystemAdmin");
}

@if (isAdmin)
{
    <div class="container mt-5">
        <div class="alert alert-danger shadow-sm">
            <i class="fa fa-exclamation-triangle"></i> You are not authorized to view or modify the cart. Please proceed to the admin dashboard.
        </div>
    </div>
}
else
{
    <section class="shoping-cart spad">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="m-0">My Cart</h2>
                @if (Model.Items.Any())
                {
                    <form asp-controller="Cart" asp-action="Clear" method="post">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-outline-danger btn-sm" onclick="return confirm('Are you sure you want to clear your cart?')">
                            <i class="fa fa-trash"></i> Clear Cart
                        </button>
                    </form>
                }
            </div>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["Success"]
                    <button type="button" class="close" data-dismiss="alert"><span>&times;</span></button>
                </div>
            }

            @if (Model.Items.Any())
            {
                <div class="shoping__cart__table">
                    <table>
                        <thead>
                            <tr>
                                <th class="shoping__product">Product</th>
                                <th>Price</th>
                                <th>Quantity</th>
                                <th>Total</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Items)
                            {
                                <tr>
                                    <td class="shoping__cart__item">
                                        <div class="d-flex align-items-center">
                                            @* --- CUSTOM TAGHELPER KULLANIMI --- *@
                                            <my-img file-name="@item.ImageUrl"
                                                    alt="@item.Name"
                                                    style="width:80px; height:80px; object-fit:cover;"
                                                    class="rounded shadow-sm me-3" />
                                            <h5>@item.Name</h5>
                                        </div>
                                    </td>
                                    <td class="shoping__cart__price">
                                        $ @item.Price.ToString("0.00", System.Globalization.CultureInfo.InvariantCulture)
                                    </td>
                                    <td class="shoping__cart__quantity">
                                        <form asp-controller="Cart" asp-action="Edit" method="post" class="d-flex justify-content-center align-items-center">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="productId" value="@item.ProductId" />
                                            <input type="number" name="quantity" value="@item.Quantity"
                                                   class="form-control form-control-sm text-center" style="width:60px;" min="1" />
                                            <button type="submit" class="btn btn-link text-warning p-0 ms-2" title="Update">
                                                <i class="fa fa-refresh"></i>
                                            </button>
                                        </form>
                                    </td>
                                    <td class="shoping__cart__total">
                                        $ @item.TotalPrice.ToString("0.00", System.Globalization.CultureInfo.InvariantCulture)
                                    </td>
                                    <td class="shoping__cart__item__close">
                                        <form asp-controller="Cart" asp-action="Edit" method="post">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="productId" value="@item.ProductId" />
                                            <input type="hidden" name="quantity" value="0" />
                                            <button type="submit" class="btn btn-sm text-danger" title="Remove">
                                                <span class="icon_close"></span>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="row mt-4">
                    <div class="col-lg-6">
                        <div class="shoping__cart__btns">
                            <a href="@Url.Action("Listing", "Home")" class="primary-btn cart-btn text-center"
                               style="width: 220px; padding: 12px 15px; font-size: 13px; display: inline-block;">CONTINUE SHOPPING</a>
                        </div>
                    </div>
                    <div class="col-lg-3 offset-lg-3">
                        <div class="shoping__checkout mt-0 float-right" style="width: 260px; padding: 25px;">
                            <h5 class="mb-2">Cart Total</h5>
                            <ul class="mb-2">
                                <li style="font-size: 16px;">Total <span style="font-size: 16px;">$ @Model.TotalPrice.ToString("0.00", System.Globalization.CultureInfo.InvariantCulture)</span></li>
                            </ul>
                            @if (User.Identity.IsAuthenticated)
                            {
                                <a href="@Url.Action("Create", "Order")" class="primary-btn text-center d-block" style="padding: 10px 15px; font-size: 13px;">PROCEED TO CHECKOUT</a>
                            }
                            else
                            {
                                <a href="/Account/Login?returnUrl=/Order/Create" class="primary-btn text-center d-block" style="background-color: #6c757d; padding: 10px 15px; font-size: 13px;">LOGIN TO CHECKOUT</a>
                            }
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fa fa-shopping-cart fa-4x text-light mb-3"></i>
                    <p class="text-muted">Your cart is empty.</p>
                    <a href="@Url.Action("Index", "Home")" class="primary-btn mt-3">START SHOPPING</a>
                </div>
            }
        </div>
    </section>
}

