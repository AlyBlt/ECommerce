@using System.Security.Claims
@using ECommerce.Application.Interfaces
@using ECommerce.Application.Interfaces.Services
@using ECommerce.Web.Mvc
@using ECommerce.Web.Mvc.Models
@using Microsoft.Extensions.DependencyInjection

@{
    // Kullanıcı login durumu
    bool isLoggedIn = User.Identity?.IsAuthenticated == true;

    // Kullanıcı adı
    string displayUserName = "User";
    var userIdClaim = User.FindFirst(ClaimTypes.NameIdentifier)?.Value;
    int? userId = null;
    if (!string.IsNullOrEmpty(userIdClaim) && int.TryParse(userIdClaim, out int uid))
    {
        userId = uid;
    }

    if (isLoggedIn)
    {
        displayUserName = User.FindFirst(ClaimTypes.Name)?.Value ?? "User";
    }

    // Cart ve Favorites sayısı
    int cartCount = 0;
    int favoritesCount = 0;
    decimal cartTotal = 0;

    var cartService = Context.RequestServices.GetService<ICartService>();
    var favoriteService = Context.RequestServices.GetService<IFavoriteService>();

    // Admin kontrolü eklendi
    bool isAdmin = User.IsInRole("Admin");
    if (userId.HasValue)
    {
        // Adminse sepetteki ürünleri sıfırla
        if (isAdmin)
        {
            cartCount = 0;
            cartTotal = 0;
            favoritesCount = 0;
        }
        else
        {
            // DB'den çek
            var favItems = await favoriteService.GetByUserAsync(userId.Value);
            var cartItems = await cartService.GetCartItemsAsync(userId.Value);
            if (cartItems != null)
            {


                cartTotal = cartItems.Sum(x => x.Quantity * x.Price);
                cartCount = cartItems.Sum(x => x.Quantity);
               
            }
            favoritesCount = favItems?.Count() ?? 0;
        }

    }
    else
    {
        // Session'dan çek
        var sessionCart = ECommerce.Web.Mvc.Helpers.SessionHelper.GetCart(Context);
        if (sessionCart != null)
        {
            cartTotal = sessionCart.Items.Sum(x => x.Quantity * x.Price);
            cartCount = sessionCart.Items.Sum(x => x.Quantity);
        }

        var sessionFavs = ECommerce.Web.Mvc.Helpers.SessionHelper.GetFavorites(Context);
        favoritesCount = sessionFavs?.Count() ?? 0;
    }
}

<header class="header">
    <!-- Header Top Begin -->
    <div class="header__top">
        <div class="container">
            <div class="row">
                <!-- Sol Kısım: Email + Free Shipping -->
                <div class="col-lg-6 col-md-6">
                    <div class="header__top__left">
                        <ul>
                            <li><i class="fa fa-envelope"></i> apple@helloworld.com</li>
                            <li>Free Shipping for all Order of $99</li>
                        </ul>
                    </div>
                </div>

                <!-- Sağ Kısım: Sosyal + Dil + Login -->
                <div class="col-lg-6 col-md-6">
                    <div class="header__top__right">
                        <!-- Sosyal ikonlar -->
                        <div class="header__top__right__social">
                            <a href="#"><i class="fa fa-facebook"></i></a>
                            <a href="#"><i class="fa fa-twitter"></i></a>
                            <a href="#"><i class="fa fa-linkedin"></i></a>
                            <a href="#"><i class="fa fa-pinterest-p"></i></a>
                        </div>

                        <!-- Dil seçimi -->
                        <div class="header__top__right__language">
                            <img src="~/img/language.png" alt="Language">
                            <div>English</div>
                            <span class="arrow_carrot-down"></span>
                            <ul>
                                <li><a href="#">Spanish</a></li>
                                <li><a href="#">English</a></li>
                            </ul>
                        </div>

                        <!-- Login / Logout -->
                        <div class="header__top__right__auth">
                            @if (isLoggedIn)
                            {
                                <div style="display:flex; align-items:center; gap:15px;">
                                    <span class="text-dark"><i class="fa fa-user"></i> @displayUserName</span>
                                    <a asp-controller="Auth" asp-action="Logout" class="text-danger">
                                        <i class="fa fa-sign-out"></i> Logout
                                    </a>
                                </div>
                            }
                            else
                            {
                                <a asp-controller="Auth" asp-action="Login"><i class="fa fa-user"></i> Login</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Header Top End -->
    <!-- Logo + Menu + Cart Begin -->
    <div class="container">
        <div class="row">
            <!-- Logo -->
            <div class="col-lg-3 col-md-3 col-sm-6">
                <div class="header__logo d-flex justify-content-center align-items-center" style="height: 100px;">
                    <a href="/">
                        <img src="~/img/logo.png?v2" alt="HelloWorld Logo" style="width:100px; height:auto; border-radius:5px;">
                    </a>
                </div>
            </div>

            <!-- Menü -->
            <div class="col-lg-6 col-md-6 col-sm-6">
                <nav class="header__menu">
                    <ul>
                        <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                            <li><a asp-controller="Home" asp-action="Listing">Shop</a></li>
                            <li class="has-dropdown">
                                <a href="#">Pages</a>
                                <ul class="header__menu__dropdown">
                                    <li><a asp-controller="Cart" asp-action="Index">Shopping Cart</a></li>
                                    <li><a asp-controller="Favorites" asp-action="Index">Favorites</a></li>
                                </ul>
                            </li>
                        
                        <li><a asp-controller="Home" asp-action="AboutUs">About Us</a></li>
                        <li><a asp-controller="Home" asp-action="Contact">Contact</a></li>
                        @if (isLoggedIn)
                        {
                            <li><a asp-controller="Profile" asp-action="Details">Profile</a></li>
                        }
                    </ul>
                </nav>
            </div>

            <!-- Sepet ve Favori -->
            <div class="col-lg-3 col-md-3 col-sm-6">
                <div class="header__cart">
                     <ul>
                        <li>
                            <a asp-controller="Favorites" asp-action="Index" id="header-favorites-link">
                                <i class="fa fa-heart"></i>
                                <span id="header-favorites-count">@favoritesCount</span>
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Cart" asp-action="Index">
                                <i class="fa fa-shopping-bag"></i>
                                <span id="cart-count">@cartCount</span>
                            </a>
                        </li>
                    </ul>
                    <div class="header__cart__price">
                        item: <span id="cart-total">$ @cartTotal.ToString("0.00", System.Globalization.CultureInfo.InvariantCulture)</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Hamburger Menü (mobil) -->
        <div class="humberger__open">
            <i class="fa fa-bars"></i>
        </div>
    </div>
    <!-- Logo + Menu + Cart End -->
</header>

