@model ECommerce.Web.Mvc.Models.Auth.ResetPasswordViewModel

@{
    ViewData["Title"] = "Reset Password";
}

<div class="auth-wrapper">
    <div class="container">
        <div class="login form">
            <header>Reset Password</header>
            <form asp-action="ResetPassword" method="post">
                <div class="checkout__input">
                    <p>Email <span>*</span></p>
                    <input asp-for="Email" type="email" placeholder="Enter your email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="checkout__input">
                    <p>New Password <span>*</span></p>
                    <input asp-for="NewPassword" type="password" placeholder="Enter new password" class="form-control" />
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>

                <div class="checkout__input">
                    <p>Confirm New Password <span>*</span></p>
                    <input asp-for="ConfirmPassword" type="password" placeholder="Confirm new password" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="mt-3">
                    <button type="submit" class="site-btn">Reset Password</button>
                </div>
            </form>
        </div>
    </div>
</div>